<div class="modal fade" id="mdlBayiCariHareket" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Bayi Cari Hareket Formu</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="frmBayiCariHareket">
                <div class="modal-body">
                    <input type="hidden" id="frmId" />

                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label">Bayi Cari</label>
                            <select id="frmBayiCariId" class="form-select" required></select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">İşlem Tarihi</label>
                            <input type="datetime-local" id="frmIslemTarihi" class="form-control" required />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Tip</label>
                            <select id="frmTip" class="form-select" required>
                                <option value="0">Borç</option>
                                <option value="1">Alacak</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Tutar</label>
                            <input type="number" id="frmTutar" class="form-control" step="0.01" required />
                        </div>
                        <div class="col-12">
                            <label class="form-label">Açıklama</label>
                            <textarea id="frmAciklama" class="form-control" rows="2"></textarea>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Referans Id</label>
                            <input type="text" id="frmReferansId" class="form-control" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Referans Tip</label>
                            <input type="text" id="frmReferansTip" class="form-control" />
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>

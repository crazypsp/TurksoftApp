<div class="modal fade" id="mdlOdeme" tabindex="-1">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Ödeme Formu</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="frmOdeme">
                <div class="modal-body">
                    <input type="hidden" id="frmId" />

                    <div class="row g-3">
                        <div class="col-md-4">
                            <label class="form-label">Satış</label>
                            <select id="frmSatisId" class="form-select" required></select>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Ödeme Tarihi</label>
                            <input type="date" id="frmOdemeTarihi" class="form-control" required />
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Ödeme Yöntemi</label>
                            <select id="frmOdemeYontemi" class="form-select" required>
                                <option value="0">Havale/EFT</option>
                                <option value="1">Kredi Kartı (Sanal POS)</option>
                                <option value="2">PayTR</option>
                                <option value="3">Sanal Kart</option>
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Durum</label>
                            <select id="frmOdemeDurumu" class="form-select" required>
                                <option value="0">Beklemede</option>
                                <option value="1">Başarılı</option>
                                <option value="2">Başarısız</option>
                                <option value="3">İade</option>
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Tutar</label>
                            <input type="number" id="frmTutar" class="form-control" step="0.01" required />
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Komisyon Oranı (%)</label>
                            <input type="number" id="frmKomisyonOrani" class="form-control" step="0.01" />
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Komisyon Tutar</label>
                            <input type="number" id="frmKomisyonTutar" class="form-control" step="0.01" />
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Net Tutar</label>
                            <input type="number" id="frmNetTutar" class="form-control" step="0.01" required />
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Sanal POS</label>
                            <select id="frmSanalPosId" class="form-select"></select>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Sağlayıcı İşlem No</label>
                            <input type="text" id="frmSaglayiciIslemNo" class="form-control" />
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Taksit</label>
                            <input type="text" id="frmTaksit" class="form-control" />
                        </div>
                    </div>

                    <div class="mt-3">
                        <label class="form-label">Açıklama</label>
                        <textarea id="frmAciklama" class="form-control" rows="2"></textarea>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>

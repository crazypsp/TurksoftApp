<div class="modal fade" id="mdlKomisyonOdemePlani" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Komisyon Ödeme Planı Formu</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="frmKomisyonOdemePlani">
                <div class="modal-body">
                    <input type="hidden" id="frmId" />

                    <div class="mb-3">
                        <label class="form-label">Bayi</label>
                        <select id="frmBayiId" class="form-select" required></select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Dönem Yıl</label>
                        <input type="number" id="frmDonemYil" class="form-control" min="2000" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Dönem Ay</label>
                        <input type="number" id="frmDonemAy" class="form-control" min="1" max="12" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Toplam Komisyon</label>
                        <input type="number" id="frmToplamKomisyon" class="form-control" step="0.01" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Durum</label>
                        <select id="frmDurum" class="form-select" required>
                            <option value="0">Planlandı</option>
                            <option value="1">Ödendi</option>
                            <option value="2">Kapandı</option>
                        </select>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>

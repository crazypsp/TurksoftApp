<div class="modal fade" id="mdlUrunFiyat" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Ürün Fiyat Formu</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="frmUrunFiyat">
                <div class="modal-body">
                    <input type="hidden" id="frmId" />

                    <div class="mb-3">
                        <label class="form-label">Paket</label>
                        <select id="frmPaketId" class="form-select" required></select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Fiyat</label>
                        <input type="number" id="frmFiyat" class="form-control" step="0.01" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Para Birimi</label>
                        <input type="text" id="frmParaBirimi" class="form-control" placeholder="Örn: TRY, USD, EUR" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Geçerlilik Başlangıç</label>
                        <input type="date" id="frmGecerlilikBaslangic" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Geçerlilik Bitiş</label>
                        <input type="date" id="frmGecerlilikBitis" class="form-control" />
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>

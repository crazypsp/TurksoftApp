<div class="col-xl-8 col-lg-6 col-md-6">
    <div class="card">
        <div class="card-body">
            <div class="d-flex justify-content-between mb-4">
                <div>
                    <h6 class="text-body">Ekstre Yükle</h6>
                </div>
                <div class="avatar bg-primary text-white d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                    <i class="ti ti-building-bank fs-2"></i>
                </div>
            </div>

            <!-- Kullanıcı + Şirket (yan yana) -->
            <div class="mb-3">
                <div class="row g-3 align-items-end">
                    <div class="col-md-6">
                        <label for="firmaSelect" class="form-label">Kullanıcı Seç</label>
                        <select id="firmaSelect" class="form-select select2" data-placeholder="Kullanıcı ara...">
                            <option value="">Kullanıcı seçiniz</option>
                            <option value="1147057-332211">FURKAN98</option>
                            <option value="8316616-ysf*.123456">YUSUF1</option>
                            <option value="7856554-ysf*.123456">YUSUFBEY</option>
                        </select>
                    </div>

                    <div class="col-md-6">
                        <label for="mukellefSelect" class="form-label">Şirket Seç</label>
                        <select id="mukellefSelect" class="form-select select2" data-placeholder="Şirket ara..." disabled>
                            <option value="">Önce kullanıcı seçiniz</option>
                        </select>
                    </div>
                </div>
            </div>

            <!-- Butonlar -->
            <div class="d-flex gap-2">
                <input type="text"
                       id="txtBankaHesapKodu"
                       class="form-control form-control-sm"
                       placeholder="Banka Hesap Kodu"
                       style="max-width: 220px;"
                       autocomplete="off" />
                <button type="button" id="btnMatch" class="btn btn-info" disabled>
                    <i class="ti ti-link me-1"></i> Hesap Eşleştirme
                </button>
                <button type="button" id="btnTransfer" class="btn btn-success" disabled>
                    <i class="ti ti-transfer me-1"></i> Transfer İşlemi
                </button>
            </div>

        </div>
    </div>
</div>

<div class="col-xl-4 col-lg-6 col-md-6">
    <div class="card h-100">
        <div class="row h-100">
            <div class="col-sm-12">
                <div class="d-flex align-items-end h-100 justify-content-center mt-sm-0 mt-4">
                    <form action="/upload" class="dropzone needsclick" id="dropzone-basic">
                        <div class="dz-message needsclick">
                            Ekstre Dosyası Seçiniz
                        </div>
                        <div class="fallback">
                            <input name="file" type="file" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

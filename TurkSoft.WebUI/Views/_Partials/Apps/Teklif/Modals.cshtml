<div class="modal fade" id="mdlTeklif" tabindex="-1">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Teklif Formu</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="frmTeklif">
                <div class="modal-body">
                    <input type="hidden" id="frmId" />

                    <div class="row g-3">
                        <div class="col-md-3">
                            <label class="form-label">Teklif No</label>
                            <input type="text" id="frmTeklifNo" class="form-control" required />
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">Opportunity</label>
                            <select id="frmOpportunityId" class="form-select" required></select>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">Paket</label>
                            <select id="frmPaketId" class="form-select" required></select>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">Durum</label>
                            <select id="frmDurum" class="form-select" required>
                                <option value="0">Taslak</option>
                                <option value="1">Gönderildi</option>
                                <option value="2">Kabul</option>
                                <option value="3">Reddedildi</option>
                                <option value="4">Süre Doldu</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">KDV Oran (%)</label>
                            <input type="number" id="frmKdvoran" class="form-control" step="0.01" required />
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">KDV Tutar</label>
                            <input type="number" id="frmKdvtutar" class="form-control" step="0.01" required />
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">Toplam</label>
                            <input type="number" id="frmToplam" class="form-control" step="0.01" required />
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">Net</label>
                            <input type="number" id="frmNet" class="form-control" step="0.01" required />
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Geçerlilik Bitiş</label>
                            <input type="date" id="frmGecerlilikBitis" class="form-control" />
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="mdlTeklifKalem" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Teklif Kalem Formu</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="frmTeklifKalem">
                <div class="modal-body">
                    <input type="hidden" id="frmId" />

                    <div class="mb-3">
                        <label class="form-label">Teklif</label>
                        <select id="frmTeklifId" class="form-select" required></select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Paket</label>
                        <select id="frmPaketId" class="form-select" required></select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Miktar</label>
                        <input type="number" id="frmMiktar" class="form-control" min="1" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Birim Fiyat</label>
                        <input type="number" id="frmBirimFiyat" class="form-control" step="0.01" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Tutar</label>
                        <input type="number" id="frmTutar" class="form-control" step="0.01" required />
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="mdlFatura" tabindex="-1">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Fatura Formu</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="frmFatura">
                <div class="modal-body">
                    <input type="hidden" id="frmId" />

                    <div class="row g-3">
                        <div class="col-md-4">
                            <label class="form-label">Fatura No</label>
                            <input type="text" id="frmFaturaNo" class="form-control" required />
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Bayi</label>
                            <select id="frmBayiId" class="form-select" required></select>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Satış</label>
                            <select id="frmSatisId" class="form-select"></select>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Firma</label>
                            <select id="frmFirmaId" class="form-select" required></select>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Tip</label>
                            <select id="frmTip" class="form-select" required>
                                <option value="0">Satış</option>
                                <option value="1">İade</option>
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Durum</label>
                            <select id="frmDurum" class="form-select" required>
                                <option value="0">Taslak</option>
                                <option value="1">Kesildi</option>
                                <option value="2">İptal</option>
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Fatura Tarihi</label>
                            <input type="date" id="frmFaturaTarihi" class="form-control" required />
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">KDV Oran (%)</label>
                            <input type="number" id="frmKdvoran" step="0.01" class="form-control" />
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">KDV Tutar</label>
                            <input type="number" id="frmKdvtutar" step="0.01" class="form-control" />
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Toplam</label>
                            <input type="number" id="frmToplam" step="0.01" class="form-control" />
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Net</label>
                            <input type="number" id="frmNet" step="0.01" class="form-control" />
                        </div>
                    </div>

                    <!-- Kalemler (ayrı tabloda yönetilecek) -->
                    <div class="mt-4">
                        <h6>Fatura Kalemleri</h6>
                        <table class="table table-sm table-bordered">
                            <thead class="table-light">
                                <tr>
                                    <th>Ürün/Hizmet</th>
                                    <th>Miktar</th>
                                    <th>Birim Fiyat</th>
                                    <th>Tutar</th>
                                    <th class="text-end">İşlem</th>
                                </tr>
                            </thead>
                            <tbody id="tbl-faturakalem-body"></tbody>
                        </table>
                        <button type="button" class="btn btn-outline-primary btn-sm" id="btnAddKalem">+ Kalem Ekle</button>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>

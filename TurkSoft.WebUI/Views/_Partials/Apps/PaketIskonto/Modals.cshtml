<div class="modal fade" id="mdlPaketIskonto" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Paket İskonto Formu</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="frmPaketIskonto">
                <div class="modal-body">
                    <input type="hidden" id="frmId" />

                    <div class="mb-3">
                        <label class="form-label">Paket</label>
                        <select id="frmPaketId" class="form-select" required></select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Bayi</label>
                        <select id="frmBayiId" class="form-select"></select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">İskonto (%)</label>
                        <input type="number" id="frmIskontoYuzde" class="form-control" step="0.01" min="0" max="100" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Başlangıç</label>
                        <input type="date" id="frmBaslangic" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Bitiş</label>
                        <input type="date" id="frmBitis" class="form-control" />
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>

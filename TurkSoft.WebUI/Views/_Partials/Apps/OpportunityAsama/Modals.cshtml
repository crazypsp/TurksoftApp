<div class="modal fade" id="mdlOpportunityAsama" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Opportunity Aşama Formu</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="frmOpportunityAsama">
                <div class="modal-body">
                    <input type="hidden" id="frmId" />

                    <div class="mb-3">
                        <label class="form-label">Kod</label>
                        <input type="text" id="frmKod" class="form-control" placeholder="Örn: NEW, QUAL, WON..." required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Ad</label>
                        <input type="text" id="frmAd" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Olasılık (%)</label>
                        <input type="number" id="frmOlasilikYuzde" class="form-control" step="0.01" min="0" max="100" required />
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>

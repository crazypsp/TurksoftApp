<div class="modal fade" id="mdlBayiKomisyonTarife" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Bayi Komisyon Tarife Formu</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="frmBayiKomisyonTarife">
                <div class="modal-body">
                    <input type="hidden" id="frmId" />

                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label">Bayi</label>
                            <select id="frmBayiId" class="form-select" required></select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Paket</label>
                            <select id="frmPaketId" class="form-select" required></select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Komisyon (%)</label>
                            <input type="number" id="frmKomisyonYuzde" class="form-control" step="0.01" required />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Başlangıç Tarihi</label>
                            <input type="date" id="frmBaslangic" class="form-control" required />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Bitiş Tarihi</label>
                            <input type="date" id="frmBitis" class="form-control" />
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="row g-2">
    <div class="col-md-2">
        <input id="fltSatisNo" type="text" class="form-control" placeholder="Satış No" />
    </div>
    <div class="col-md-2">
        <input id="fltSatisTarihi" type="date" class="form-control" placeholder="Satış Tarihi" />
    </div>
    <div class="col-md-2">
        <select id="fltBayiId" class="form-select">
            <option value="">Bayi</option>
        </select>
    </div>
    <div class="col-md-2">
        <select id="fltMaliMusavirId" class="form-select">
            <option value="">Mali Müşavir</option>
        </select>
    </div>
    <div class="col-md-2">
        <select id="fltFirmaId" class="form-select">
            <option value="">Firma</option>
        </select>
    </div>
    <div class="col-md-2">
        <select id="fltPaketId" class="form-select">
            <option value="">Paket</option>
        </select>
    </div>
</div>
<div class="row g-2 mt-2">
    <div class="col-md-2">
        <select id="fltSatisDurumu" class="form-select">
            <option value="">Durum</option>
            <option value="0">Teklif</option>
            <option value="1">Kesildi</option>
            <option value="2">İptal</option>
        </select>
    </div>
    <div class="col-md-2">
        <input id="fltNetTutar" type="number" step="0.01" class="form-control" placeholder="Net Tutar" />
    </div>
</div>

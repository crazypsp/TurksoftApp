<div class="modal fade" id="mdlSatis" tabindex="-1">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Satış Formu</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="frmSatis">
                <div class="modal-body">
                    <input type="hidden" id="frmId" />

                    <div class="row g-3">
                        <div class="col-md-4">
                            <label class="form-label">Satış No</label>
                            <input type="text" id="frmSatisNo" class="form-control" required />
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Satış Tarihi</label>
                            <input type="date" id="frmSatisTarihi" class="form-control" required />
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Bayi</label>
                            <select id="frmBayiId" class="form-select" required></select>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Mali Müşavir</label>
                            <select id="frmMaliMusavirId" class="form-select" required></select>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Firma</label>
                            <select id="frmFirmaId" class="form-select"></select>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Paket</label>
                            <select id="frmPaketId" class="form-select" required></select>
                        </div>
                        <div class="col-md-2">
                            <label class="form-label">KDV Oranı (%)</label>
                            <input type="number" id="frmKDVOrani" class="form-control" step="0.01" required />
                        </div>
                        <div class="col-md-2">
                            <label class="form-label">KDV Tutar</label>
                            <input type="number" id="frmKDVTutar" class="form-control" step="0.01" required />
                        </div>
                        <div class="col-md-2">
                            <label class="form-label">İskonto Tutar</label>
                            <input type="number" id="frmIskontoTutar" class="form-control" step="0.01" required />
                        </div>
                        <div class="col-md-2">
                            <label class="form-label">Toplam Tutar</label>
                            <input type="number" id="frmToplamTutar" class="form-control" step="0.01" required />
                        </div>
                        <div class="col-md-2">
                            <label class="form-label">Net Tutar</label>
                            <input type="number" id="frmNetTutar" class="form-control" step="0.01" required />
                        </div>
                        <div class="col-md-2">
                            <label class="form-label">Durum</label>
                            <select id="frmSatisDurumu" class="form-select" required>
                                <option value="0">Teklif</option>
                                <option value="1">Kesildi</option>
                                <option value="2">İptal</option>
                            </select>
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>

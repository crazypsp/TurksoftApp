<div class="modal fade" id="mdlLisans" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Lisans Formu</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="frmLisans">
                <div class="modal-body">
                    <input type="hidden" id="frmId" />

                    <div class="mb-3">
                        <label class="form-label">Lisans Anahtarı</label>
                        <input type="text" id="frmLisansAnahtari" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Başlangıç Tarihi</label>
                        <input type="date" id="frmBaslangicTarihi" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Bitiş Tarihi</label>
                        <input type="date" id="frmBitisTarihi" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Yenilendi Mi?</label>
                        <select id="frmYenilendiMi" class="form-select">
                            <option value="true">Evet</option>
                            <option value="false">Hayır</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Satış</label>
                        <select id="frmSatisId" class="form-select" required></select>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>

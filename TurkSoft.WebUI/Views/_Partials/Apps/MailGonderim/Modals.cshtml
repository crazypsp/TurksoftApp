<div class="modal fade" id="mdlMailGonderim" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Mail Gönderim Formu</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="frmMailGonderim">
                <div class="modal-body">
                    <input type="hidden" id="frmId" />

                    <div class="mb-3">
                        <label class="form-label">Alıcı</label>
                        <input type="email" id="frmAlici" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Konu</label>
                        <input type="text" id="frmKonu" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">İçerik</label>
                        <textarea id="frmIcerik" class="form-control" rows="5" required></textarea>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Başarılı mı?</label>
                        <select id="frmBasariliMi" class="form-select">
                            <option value="true">Evet</option>
                            <option value="false">Hayır</option>
                        </select>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="mdlSistemBildirim" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Sistem Bildirim Formu</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="frmSistemBildirim">
                <div class="modal-body">
                    <input type="hidden" id="frmId" />

                    <div class="row g-3">
                        <div class="col-md-4">
                            <label class="form-label">Kanal</label>
                            <select id="frmKanal" class="form-select" required>
                                <option value="0">Email</option>
                                <option value="1">Sms</option>
                                <option value="2">Push</option>
                                <option value="3">Web</option>
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Planlanan Tarih</label>
                            <input type="datetime-local" id="frmPlanlananTarih" class="form-control" />
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Durum</label>
                            <select id="frmDurum" class="form-select" required>
                                <option value="0">Oluşacak</option>
                                <option value="1">Gönderildi</option>
                                <option value="2">Hata</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Başlık</label>
                            <input type="text" id="frmBaslik" class="form-control" required />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Hedef Kullanıcı</label>
                            <select id="frmHedefKullaniciId" class="form-select"></select>
                        </div>
                    </div>

                    <div class="mt-3">
                        <label class="form-label">İçerik</label>
                        <textarea id="frmIcerik" class="form-control" rows="4" required></textarea>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>

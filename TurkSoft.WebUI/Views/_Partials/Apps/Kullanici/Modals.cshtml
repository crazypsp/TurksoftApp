<!-- Kullanıcı Ekle/Düzenle Modal -->
<div class="modal fade" id="kullaniciModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-body">
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                <div class="text-center mb-4">
                    <h4 id="kullaniciModalTitle">Yeni Kullanıcı Ekle</h4>
                    <p>Kullanıcı bilgilerini giriniz</p>
                </div>
                <form id="kullaniciForm" class="row g-3" onsubmit="return false;">
                    <input type="hidden" id="kullaniciId" name="id">
                    <div class="col-sm-6">
                        <label class="form-label" for="adSoyad">Ad Soyad</label>
                        <input type="text" id="adSoyad" name="adSoyad" class="form-control" required>
                    </div>
                    <div class="col-sm-6">
                        <label class="form-label" for="eposta">E-Posta</label>
                        <input type="email" id="eposta" name="eposta" class="form-control" required>
                    </div>
                    <div class="col-sm-6">
                        <label class="form-label" for="sifre">Şifre</label>
                        <input type="password" id="sifre" name="sifre" class="form-control" required>
                    </div>
                    <div class="col-sm-6">
                        <label class="form-label" for="telefon">Telefon</label>
                        <input type="text" id="telefon" name="telefon" class="form-control">
                    </div>
                    <div class="col-sm-6">
                        <label class="form-label" for="rol">Rol</label>
                        <input type="text" id="rol" name="rol" class="form-control" required>
                    </div>
                    <div class="col-sm-6">
                        <label class="form-label" for="profilResmi">Profil Resmi URL</label>
                        <input type="text" id="profilResmi" name="profilResmiUrl" class="form-control">
                    </div>
                    <div class="col-sm-6 align-items-center d-flex">
                        <label class="form-check-label me-2" for="isActive">Aktif mi?</label>
                        <input type="checkbox" id="isActive" name="isActive" class="form-check-input" checked>
                    </div>
                    <div class="col-12 text-center">
                        <button type="submit" class="btn btn-primary me-2" id="saveKullaniciBtn">Kaydet</button>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

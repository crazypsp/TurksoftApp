@{
  TempData.Keep();
  string? currentPage = ViewContext.HttpContext.Request.Path;
}

@{
    bool isMM = currentPage!.StartsWith("/MaliMusavir");
    bool isLuca = currentPage!.StartsWith("/Luca");
    bool isKA = currentPage!.StartsWith("/KeyAccount");
    bool isTr = currentPage!.StartsWith("/Transfers");
    bool isBayi = currentPage!.StartsWith("/Bayi");
    bool isKul = currentPage!.StartsWith("/Kullanici");
    bool isMuhasebeGrp = isMM || isLuca || isKA || isTr || isBayi || isKul;
}

<style>
    /* İlk yükte flicker olmasın; script açana kadar sakla */
    [data-guard] {
        display: none;
    }
</style>



<!-- Menu -->
@* ! Do this simple *@
<aside id="layout-menu" class="layout-menu menu-vertical menu bg-menu-theme">

  @* ! Hide app brand if navbar-full *@
  <div
    class='app-brand demo @((@ViewData["navbarFull"] != null && Convert.ToBoolean(@ViewData["navbarFull"])) ? "d-xl-none" : "")'>
    <a asp-controller="Dashboards" asp-action="Index" class="app-brand-link">
      <span class="app-brand-logo demo">
                <svg width="32" height="22" viewBox="0 0 32 22" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd" clip-rule="evenodd" d="M0.00172773 0V6.85398C0.00172773 6.85398 -0.133178 9.01207 1.98092 10.8388L13.6912 21.9964L19.7809 21.9181L18.8042 9.88248L16.4951 7.17289L9.23799 0H0.00172773Z" fill="#7367F0" />
                    <path opacity="0.06" fill-rule="evenodd" clip-rule="evenodd" d="M7.69824 16.4364L12.5199 3.23696L16.5541 7.25596L7.69824 16.4364Z" fill="#161616" />
                    <path opacity="0.06" fill-rule="evenodd" clip-rule="evenodd" d="M8.07751 15.9175L13.9419 4.63989L16.5849 7.28475L8.07751 15.9175Z" fill="#161616" />
                    <path fill-rule="evenodd" clip-rule="evenodd" d="M7.77295 16.3566L23.6563 0H32V6.88383C32 6.88383 31.8262 9.17836 30.6591 10.4057L19.7824 22H13.6938L7.77295 16.3566Z" fill="#7367F0" />
                </svg>
      </span>
      <span class="app-brand-text demo menu-text fw-bold">@TempData.Peek("appName")</span>
    </a>

    <a href="javascript:void(0);" class="layout-menu-toggle menu-link text-large ms-auto">
      <i class="ti menu-toggle-icon d-none d-xl-block align-middle"></i>
      <i class="ti ti-x d-block d-xl-none ti-md align-middle"></i>
    </a>
  </div>

  <div class="menu-inner-shadow"></div>

  @* ! Full version menu-items *@
  <ul class="menu-inner py-1">
        <!-- Muhasebe (role-guard) -->
        <li class="menu-item" id="menuGrpMuhasebe">
            <a href="javascript:void(0);" class="menu-link menu-toggle">
                <i class="menu-icon tf-icons ti ti-briefcase"></i>
                <div>Muhasebe</div>
            </a>
            <ul class="menu-sub">
                <li class="menu-item" id="menuBayi">
                    <a asp-controller="Bayi" asp-action="Index" class="menu-link">
                        <div>Bayi</div>
                    </a>
                </li>
                <li class="menu-item" id="menuMM">
                    <a asp-controller="MaliMusavir" asp-action="Index" class="menu-link">
                        <div>Mali Müşavir</div>
                    </a>
                </li>
                <li class="menu-item" id="menuKullanici">
                    <a asp-controller="Kullanici" asp-action="Index" class="menu-link">
                        <div>Kullanıcılar</div>
                    </a>
                </li>
                <li class="menu-item" id="menuTransfers">
                    <a asp-controller="Transfers" asp-action="Index" class="menu-link">
                        <div>Transfers</div>
                    </a>
                </li>
                <li class="menu-item" id="menuLuca">
                    <a asp-controller="Luca" asp-action="Index" class="menu-link">
                        <div>Luca</div>
                    </a>
                </li>
                <li class="menu-item" id="menuKeyAccount">
                    <a asp-controller="KeyAccount" asp-action="Index" class="menu-link">
                        <div>Key Account</div>
                    </a>
                </li>
            </ul>
        </li>

        <!-- sayfanın en sonunda (</aside> kapanışından hemen önce) -->
        <script type="module" src="~/ApiJS/Guards/menu-guard.js" asp-append-version="true"></script>
        




    <!-- Misc -->
    <li class="menu-header small">
      <span class="menu-header-text" data-i18n="Nox">Misc</span>
    </li>
  </ul>

</aside>
<!-- / Menu -->

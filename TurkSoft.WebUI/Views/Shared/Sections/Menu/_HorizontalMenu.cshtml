    @* ! Full version menu-items *@
    <ul class="menu-inner pb-2 pb-xl-0">
            <!-- Muhasebe -->
            <!-- Muhasebe (role-guard) -->
            <li class="menu-item" id="menuGrpMuhasebe">
                <a href="javascript:void(0)" class="menu-link menu-toggle">
                    <i class="menu-icon tf-icons ti ti-briefcase"></i>
                    <div>Muhasebe</div>
                </a>
                <ul class="menu-sub">
                    <li class="menu-item" id="menuMM">
                        <a asp-controller="MaliMusavir" asp-action="Index" class="menu-link"><div>Mali Müşavir</div></a>
                    </li>
                    <li class="menu-item" id="menuBayi">

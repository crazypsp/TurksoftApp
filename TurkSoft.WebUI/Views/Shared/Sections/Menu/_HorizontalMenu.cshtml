@{
  TempData.Keep();

  string? currentPage = ViewContext.HttpContext.Request.Path;

  ViewData["containerNav"] ??= "container-fluid";
}
@{
    bool isMM = currentPage!.StartsWith("/MaliMusavir");
    bool isLuca = currentPage!.StartsWith("/Luca");
    bool isKA = currentPage!.StartsWith("/KeyAccount");
    bool isTr = currentPage!.StartsWith("/Transfers");
    bool isBayi = currentPage!.StartsWith("/Bayi");
    bool isKul = currentPage!.StartsWith("/Kullanici");
    bool isMuhasebeGrp = isMM || isLuca || isKA || isTr || isKul;
}


<!-- Menu -->
<aside id="layout-menu" class="layout-menu-horizontal menu-horizontal  menu bg-menu-theme flex-grow-0">

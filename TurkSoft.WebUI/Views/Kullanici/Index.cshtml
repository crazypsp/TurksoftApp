@{
    ViewData["Title"] = "Kullanıcı Yönetimi";
}

@section VendorStyles {
    <link rel="stylesheet" href="~/vendor/libs/datatables-bs5/datatables.bootstrap5.css" />
    <link rel="stylesheet" href="~/vendor/libs/datatables-responsive-bs5/responsive.bootstrap5.css" />
    <link rel="stylesheet" href="~/vendor/libs/datatables-buttons-bs5/buttons.bootstrap5.css" />
    <link rel="stylesheet" href="~/vendor/libs/&#64;-validation/form-validation.css" />
}

@section VendorScripts {
    <script src="~/vendor/libs/datatables-bs5/datatables-bootstrap5.js"></script>
    <script src="~/vendor/libs/&#64;-validation/popular.js"></script>
    <script src="~/vendor/libs/&#64;-validation/bootstrap5.js"></script>
    <script src="~/vendor/libs/&#64;-validation/auto-focus.js"></script>
}

@section PageScripts {
    <!-- ES module: sayfa davranışları -->
    <script type="module" src="~/ApiJS/Apps/Kullanici.js"></script>
}

<h4 class="mb-1">Kullanıcılar</h4>
<p class="text-muted mb-6">
    Sistemdeki kullanıcıları görüntüleyebilir, arayabilir, yeni kullanıcı ekleyip düzenleyebilirsiniz.
</p>

<div class="row g-6">
    <div class="col-12">
        @await Html.PartialAsync("../_Partials/Apps/Kullanici/Filters")   @* Arama & “Yeni” butonu *@
    </div>

    <div class="col-12">
        @await Html.PartialAsync("../_Partials/Apps/Kullanici/Cards")    @* Küçük istatistik kartları *@
    </div>

    <div class="col-12">
        @await Html.PartialAsync("../_Partials/Apps/Kullanici/Tables")   @* Liste tablosu *@
    </div>
</div>
@await Html.PartialAsync("../_Partials/Apps/Kullanici/Modals")           @* Ekle/Düzenle Modal *@

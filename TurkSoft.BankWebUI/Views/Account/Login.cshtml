@model TurkSoft.BankWebUI.ViewModels.LoginVm
@{
    Layout = "_LoginLayout";
    ViewData["Title"] = "Giriş";
}

<div class="auth-card panel">
    <div class="row g-0">
        <div class="col-lg-6 auth-left">
            <div class="d-flex align-items-center gap-2 mb-4">
                <div class="brand-badge"><i class="fa-solid fa-chart-line"></i></div>
                <div>
                    <div class="h5 m-0 fw-bold">Finans Yönetimi</div>
                    <div class="text-muted">Demo giriş: admin@firma.com / 123456</div>
                </div>
            </div>

            <div class="panel p-3" style="background: rgba(255,255,255,.04); border-color: rgba(255,255,255,.08);">
                <div class="fw-semibold mb-2"><i class="fa-solid fa-flask me-2"></i>Demo Kullanıcılar</div>
                <ul class="mb-0 text-muted">
                    <li>admin@firma.com / 123456 (Admin)</li>
                    <li>finans@firma.com / 123456 (Finance)</li>
                    <li>integrator@firma.com / 123456 (Integrator)</li>
                    <li>viewer@firma.com / 123456 (Viewer)</li>
                </ul>
            </div>
        </div>

        <div class="col-lg-6 auth-right">
            <h2 class="h4 fw-bold mb-1">Hoş geldiniz</h2>
            <div class="text-muted mb-3">Devam etmek için giriş yapın.</div>

            @if (!string.IsNullOrWhiteSpace(Model.Error))
            {
                <div class="alert alert-danger">
                    <i class="fa-solid fa-triangle-exclamation me-2"></i>@Model.Error
                </div>
            }

            <form asp-action="Login" method="post">
                @Html.AntiForgeryToken()

                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control" placeholder="admin@firma.com" />
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label"></label>
                    <input asp-for="Password" class="form-control" placeholder="123456" />
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>

                <div class="form-check mb-3">
                    <input asp-for="RememberMe" class="form-check-input" />
                    <label asp-for="RememberMe" class="form-check-label">Beni hatırla</label>
                </div>

                <button class="btn btn-primary w-100" type="submit">
                    <i class="fa-solid fa-right-to-bracket me-2"></i>Giriş Yap
                </button>
            </form>
        </div>
    </div>
</div>

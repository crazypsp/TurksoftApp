@{
    ViewData["Title"] = "Erişim Reddedildi";
    Layout = "_LoginLayout";
}

<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header text-center mb-4">
            <div class="auth-icon mb-3">
                <i class="fa-solid fa-ban fa-3x text-danger"></i>
            </div>
            <h2 class="mb-1">Erişim Reddedildi</h2>
            <p class="text-muted">Bu sayfaya erişim yetkiniz bulunmamaktadır.</p>
        </div>

        <div class="alert alert-warning">
            <i class="fa-solid fa-triangle-exclamation me-2"></i>
            <strong>Yetki Hatası:</strong> Bu sayfayı görüntülemek için gerekli role sahip değilsiniz.
        </div>

        <div class="text-center mt-4">
            <p class="mb-3">Lütfen aşağıdaki seçeneklerden birini deneyin:</p>

            <div class="d-grid gap-2">
                <a asp-controller="Dashboard" asp-action="Index" class="btn btn-primary">
                    <i class="fa-solid fa-house me-2"></i>Ana Sayfaya Dön
                </a>
                <a asp-controller="Account" asp-action="Logout"
                   onclick="event.preventDefault(); document.getElementById('logoutForm').submit();"
                   class="btn btn-outline-danger">
                    <i class="fa-solid fa-right-from-bracket me-2"></i>Farklı Kullanıcı ile Giriş Yap
                </a>
                <form id="logoutForm" asp-controller="Account" asp-action="Logout" method="post" class="d-none">
                    @Html.AntiForgeryToken()
                </form>
            </div>
        </div>

        <div class="mt-4 text-center small text-muted">
            <p>Yöneticinizden aşağıdaki rollere sahip olmanızı talep edebilirsiniz:</p>
            <div class="d-flex justify-content-center gap-2">
                <span class="badge bg-danger">Admin</span>
                <span class="badge bg-primary">Finance</span>
                <span class="badge bg-warning text-dark">Integrator</span>
                <span class="badge bg-secondary">Viewer</span>
            </div>
        </div>
    </div>
</div>
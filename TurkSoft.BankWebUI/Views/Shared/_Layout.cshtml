@{
    var title = ViewData["Title"] as string ?? "Finans Yönetimi";
}
<!doctype html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@title · Finans</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.8/css/dataTables.bootstrap5.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="app-body">
    <div class="app-shell">
        <aside class="app-sidebar">
            @await Html.PartialAsync("_Sidebar")
        </aside>

        <main class="app-main">
            <header class="app-topbar">
                @await Html.PartialAsync("_Topbar")
            </header>

            <section class="app-content">
                <div class="container-fluid py-3">

                    @if (TempData["Toast"] is string toast)
                    {
                        <div class="alert alert-success">
                            <i class="fa-solid fa-check me-2"></i>@toast
                        </div>
                    }

                    <div class="d-flex align-items-center justify-content-between flex-wrap gap-2 mb-3">
                        <div>
                            <h1 class="page-title m-0">@title</h1>
                            @if (ViewData["Subtitle"] is string st && !string.IsNullOrWhiteSpace(st))
                            {
                                <div class="text-muted small">@st</div>
                            }
                        </div>
                        <div>@RenderSection("PageActions", required: false)</div>
                    </div>

                    @RenderBody()
                </div>
            </section>

            <footer class="app-footer">
                @await Html.PartialAsync("_Footer")
            </footer>
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.min.js"></script>

    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.8/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.8/js/dataTables.bootstrap5.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script src="https://cdn.jsdelivr.net/npm/flatpickr/dist/l10n/tr.js"></script>
    <script type="module" src="~/ApiJS/Apps/BankStatement.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await Html.PartialAsync("_ValidationScriptsPartial")
    @RenderSection("Scripts", required: false)
</body>
</html>

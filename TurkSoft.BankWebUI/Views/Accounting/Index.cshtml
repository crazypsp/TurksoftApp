@model TurkSoft.BankWebUI.ViewModels.AccountingVm
@{
    ViewData["Title"] = "Aktarım / Muhasebe";
    ViewData["Subtitle"] = "Aktarım listesi, eşleştirme, kuyruk/durum, hata logları";
}

@section PageActions {
    <div class="d-flex gap-2">
        <a href="@Url.Action("ExportCsv", new { dateRange = Model.DateRange, bank = Model.Bank, status = Model.Status })"
           class="btn btn-success">
            <i class="fa-solid fa-file-csv me-2"></i>CSV İndir
        </a>
        <a href="@Url.Action("ExportJson", new { dateRange = Model.DateRange, bank = Model.Bank, status = Model.Status })"
           class="btn btn-info text-white">
            <i class="fa-solid fa-file-code me-2"></i>JSON İndir
        </a>
    </div>
}

<div class="row mb-4">
    <div class="col-md-12">
        <div class="card border-0 shadow">
            <div class="card-body">
                <form method="get" class="row g-3">
                    <div class="col-md-4">
                        <label class="form-label">Tarih Aralığı</label>
                        <input type="text" name="dateRange" class="form-control date-range-picker"
                               value="@Model.DateRange" placeholder="Tarih seçin" />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Banka</label>
                        <select name="bank" class="form-select">
                            <option value="">Tüm Bankalar</option>
                            @foreach (var bank in Model.Banks)
                            {
                                <option value="@bank" selected="@(Model.Bank == bank)">@bank</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Durum</label>
                        <select name="status" class="form-select">
                            <option value="">Tümü</option>
                            <option value="Draft" selected="@(Model.Status == "Draft")">Taslak</option>
                            <option value="Ready" selected="@(Model.Status == "Ready")">Hazır</option>
                            <option value="Queued" selected="@(Model.Status == "Queued")">Kuyrukta</option>
                            <option value="Exported" selected="@(Model.Status == "Exported")">Aktarılmış</option>
                        </select>
                    </div>
                    <div class="col-md-2 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="fa-solid fa-filter me-2"></i>Filtrele
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card border-0 shadow mb-4">
            <div class="card-header bg-white d-flex justify-content-between align-items-center">
                <h6 class="mb-0"><i class="fa-solid fa-list me-2"></i>Aktarım Kayıtları</h6>
                <span class="badge bg-primary">@Model.TransferRecords.Count kayıt</span>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="transferTable" class="table table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Tarih</th>
                                <th>Banka</th>
                                <th>Açıklama</th>
                                <th class="text-end">Borç</th>
                                <th class="text-end">Alacak</th>
                                <th>Durum</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var record in Model.TransferRecords)
                            {
                                <tr>
                                    <td>@record.Id</td>
                                    <td>@record.Date.ToString("dd.MM.yyyy")</td>
                                    <td>@record.BankName</td>
                                    <td>@record.Description</td>
                                    <td class="text-end">@record.Debit.ToString("N2")</td>
                                    <td class="text-end">@record.Credit.ToString("N2")</td>
                                    <td>
                                        <span class="badge @GetStatusBadgeClass(record.Status)">
                                            @record.Status
                                        </span>
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            @if (!record.IsMapped)
                                            {
                                                <button type="button" class="btn btn-outline-primary btn-sm"
                                                        data-bs-toggle="modal" data-bs-target="#mappingModal"
                                                        data-record-id="@record.Id"
                                                        data-record-desc="@record.Description">
                                                    <i class="fa-solid fa-link"></i>
                                                </button>
                                            }
                                            @if (record.Status == TurkSoft.BankWebUI.Models.TransferRecordStatus.Ready)
                                            {
                                                <form method="post" asp-action="Enqueue" class="d-inline">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="transferId" value="@record.Id" />
                                                    <button type="submit" class="btn btn-outline-success btn-sm">
                                                        <i class="fa-solid fa-play"></i>
                                                    </button>
                                                </form>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card border-0 shadow mb-4">
            <div class="card-header bg-white">
                <h6 class="mb-0"><i class="fa-solid fa-gears me-2"></i>Eşleştirme Kuralları</h6>
            </div>
            <div class="card-body">
                <div class="list-group">
                    @foreach (var mapping in Model.Mappings)
                    {
                        <div class="list-group-item">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <strong>@mapping.BankName</strong><br />
                                    <small class="text-muted">@mapping.AccountType → @mapping.GlAccountName</small>
                                </div>
                                @if (mapping.IsDefault)
                                {
                                    <span class="badge bg-info">Varsayılan</span>
                                }
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="card border-0 shadow">
            <div class="card-header bg-white">
                <h6 class="mb-0"><i class="fa-solid fa-clock me-2"></i>Kuyruk Durumu</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Durum</th>
                                <th>Deneme</th>
                                <th>İşlem</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var queue in Model.Queue)
                            {
                                <tr>
                                    <td>@queue.Id</td>
                                    <td>
                                        <span class="badge @GetQueueStatusBadgeClass(queue.Status)">
                                            @queue.Status
                                        </span>
                                    </td>
                                    <td>@queue.AttemptCount</td>
                                    <td>
                                        @if (queue.Status == TurkSoft.BankWebUI.Models.QueueStatus.Failed)
                                        {
                                            <form method="post" asp-action="Retry" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="queueId" value="@queue.Id" />
                                                <button type="submit" class="btn btn-sm btn-warning">
                                                    <i class="fa-solid fa-rotate"></i>
                                                </button>
                                            </form>
                                        }
                                        @if (queue.Status == TurkSoft.BankWebUI.Models.QueueStatus.Success)
                                        {
                                            <form method="post" asp-action="Export" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="queueId" value="@queue.Id" />
                                                <button type="submit" class="btn btn-sm btn-success">
                                                    <i class="fa-solid fa-check"></i>
                                                </button>
                                            </form>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Eşleştirme Modal -->
<div class="modal fade" id="mappingModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Hesap Eşleştirme</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="mappingForm" method="post" asp-action="ApplyMapping">
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <input type="hidden" name="transferId" id="transferId" />

                    <div class="mb-3">
                        <label class="form-label">Açıklama</label>
                        <input type="text" class="form-control" id="recordDesc" readonly />
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Genel Muhasebe Hesabı *</label>
                            <select name="glCode" class="form-select" id="glCode" required>
                                <option value="">Seçiniz</option>
                                @foreach (var gl in Model.GlAccounts)
                                {
                                    <option value="@gl.Code">@gl.Code - @gl.Name</option>
                                }
                            </select>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label class="form-label">Masraf Merkezi</label>
                            <select name="costCenter" class="form-select" id="costCenter">
                                <option value="">Seçiniz</option>
                                <option value="CC001">CC001 - Genel Giderler</option>
                                <option value="CC002">CC002 - Satış Giderleri</option>
                                <option value="CC003">CC003 - Pazarlama</option>
                            </select>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Tedarikçi</label>
                            <select name="vendorCode" class="form-select" id="vendorCode">
                                <option value="">Seçiniz</option>
                                @foreach (var vendor in Model.Vendors)
                                {
                                    <option value="@vendor.Code">@vendor.Code - @vendor.Name</option>
                                }
                            </select>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                    <button type="submit" class="btn btn-primary">Eşleştir</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // DataTables initialization
            $('#transferTable').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.8/i18n/tr.json'
                },
                order: [[1, 'desc']],
                pageLength: 25
            });

            // Date range picker
            flatpickr(".date-range-picker", {
                mode: "range",
                locale: "tr",
                dateFormat: "d.m.Y",
                altInput: true,
                altFormat: "d.m.Y"
            });

            // Mapping modal event
            $('#mappingModal').on('show.bs.modal', function(event) {
                var button = $(event.relatedTarget);
                $('#transferId').val(button.data('record-id'));
                $('#recordDesc').val(button.data('record-desc'));
            });
        });
    </script>
}

@functions {
    string GetStatusBadgeClass(TurkSoft.BankWebUI.Models.TransferRecordStatus status)
    {
        return status switch
        {
            TurkSoft.BankWebUI.Models.TransferRecordStatus.Draft => "bg-secondary",
            TurkSoft.BankWebUI.Models.TransferRecordStatus.Ready => "bg-warning text-dark",
            TurkSoft.BankWebUI.Models.TransferRecordStatus.Queued => "bg-info",
            TurkSoft.BankWebUI.Models.TransferRecordStatus.Exported => "bg-success",
            _ => "bg-light text-dark"
        };
    }

    string GetQueueStatusBadgeClass(TurkSoft.BankWebUI.Models.QueueStatus status)
    {
        return status switch
        {
            TurkSoft.BankWebUI.Models.QueueStatus.Pending => "bg-secondary",
            TurkSoft.BankWebUI.Models.QueueStatus.Processing => "bg-primary",
            TurkSoft.BankWebUI.Models.QueueStatus.Success => "bg-success",
            TurkSoft.BankWebUI.Models.QueueStatus.Failed => "bg-danger",
            _ => "bg-light text-dark"
        };
    }
}
@model TurkSoft.BankWebUI.ViewModels.BankPullDeltaVm
@{
    ViewData["Title"] = "Son Çekimden Beri Gelenler";
}

@section PageActions {
    <a class="btn btn-sm btn-outline-light" asp-action="Logs"><i class="fa-solid fa-arrow-left me-2"></i>Loglara Dön</a>
}

<div class="panel">
    <div class="panel-header d-flex justify-content-between">
        <div class="fw-semibold"><i class="fa-solid fa-list me-2"></i>@Model.BankName · Log #@Model.LogId</div>
        <span class="badge badge-soft">@Model.Transactions.Count kayıt</span>
    </div>
    <div class="panel-body">
        <div class="table-responsive">
            <table class="table table-dark table-hover align-middle mb-0" data-dt="true">
                <thead>
                    <tr><th>Tarih</th><th>Tip</th><th>Referans</th><th>Açıklama</th><th class="text-end">Net</th></tr>
                </thead>
                <tbody>
                    @foreach (var t in Model.Transactions)
                    {
                        <tr>
                            <td>@t.Date.ToString("dd.MM.yyyy HH:mm")</td>
                            <td>@t.AccountType</td>
                            <td>@t.ReferenceNo</td>
                            <td>@t.Description</td>
                            <td class="text-end @(t.Net >= 0 ? "text-success" : "text-warning")">@t.Net.ToString("+#,##0.00;-#,##0.00;0.00") ₺</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

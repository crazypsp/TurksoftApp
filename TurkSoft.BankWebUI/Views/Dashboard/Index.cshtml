@model TurkSoft.BankWebUI.ViewModels.DashboardVm
@using System.Text.Json

@{
    // Chart için güvenli JSON
    var labelsJson = JsonSerializer.Serialize(Model?.CashflowLabels ?? new List<string>());
    var netJson = JsonSerializer.Serialize(Model?.CashflowNet ?? new List<decimal>());
}

<div class="row">
    <!-- Özet Kartlar -->
    <div class="col-md-3 mb-4">
        <div class="card border-0 shadow-sm bg-primary text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-title mb-2">Toplam Bakiye</h6>
                        <h3 class="mb-0">@((Model?.TotalBalance ?? 0m).ToString("N2")) ₺</h3>
                    </div>
                    <i class="fa-solid fa-wallet fa-2x opacity-50"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3 mb-4">
        <div class="card border-0 shadow-sm bg-success text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-title mb-2">Günlük Giriş</h6>
                        <h3 class="mb-0">@((Model?.DailyIn ?? 0m).ToString("N2")) ₺</h3>
                    </div>
                    <i class="fa-solid fa-arrow-down-to-line fa-2x opacity-50"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3 mb-4">
        <div class="card border-0 shadow-sm bg-danger text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-title mb-2">Günlük Çıkış</h6>
                        <h3 class="mb-0">@((Model?.DailyOut ?? 0m).ToString("N2")) ₺</h3>
                    </div>
                    <i class="fa-solid fa-arrow-up-from-line fa-2x opacity-50"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3 mb-4">
        <div class="card border-0 shadow-sm bg-warning text-dark">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-title mb-2">Mutabakat Uyarısı</h6>
                        <h3 class="mb-0">@((Model?.ReconcileAlerts ?? 0).ToString())</h3>
                    </div>
                    <i class="fa-solid fa-bell fa-2x opacity-50"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <!-- Banka Bakiyeleri -->
    <div class="col-md-6 mb-4">
        <div class="card border-0 shadow h-100">
            <div class="card-header bg-white">
                <h6 class="mb-0"><i class="fa-solid fa-building-columns me-2"></i>Banka Bakiyeleri</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Banka</th>
                                <th class="text-end">TRY Bakiye</th>
                                <th class="text-end">USD Bakiye</th>
                                <th class="text-end">EUR Bakiye</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var balance in (Model?.BankBalances ?? Enumerable.Empty<TurkSoft.BankWebUI.Models.BankBalance>()))
                            {
                                <tr>
                                    <td>@balance.BankName</td>
                                    <td class="text-end">@balance.BalanceTry.ToString("N2") ₺</td>
                                    <td class="text-end">@((balance.BalanceTry / 32m).ToString("N2")) $</td>
                                    <td class="text-end">@((balance.BalanceTry / 35m).ToString("N2")) €</td>
                                </tr>
                            }

                            @if (Model?.BankBalances == null || !Model.BankBalances.Any())
                            {
                                <tr>
                                    <td colspan="4" class="text-muted text-center py-3">
                                        Henüz banka verisi yok (WS veri döndürmedi veya credential eksik).
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Nakit Akış Grafiği -->
    <div class="col-md-6 mb-4">
        <div class="card border-0 shadow h-100">
            <div class="card-header bg-white">
                <h6 class="mb-0"><i class="fa-solid fa-chart-line me-2"></i>Son 7 Gün Nakit Akışı</h6>
            </div>
            <div class="card-body">
                <canvas id="cashflowChart"></canvas>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <!-- Son Hareketler -->
    <div class="col-md-12">
        <div class="card border-0 shadow">
            <div class="card-header bg-white d-flex justify-content-between align-items-center">
                <h6 class="mb-0"><i class="fa-solid fa-clock-rotate-left me-2"></i>Son Hareketler</h6>
                <a href="@Url.Action("Index", "Reports")" class="btn btn-sm btn-outline-primary">
                    <i class="fa-solid fa-external-link me-1"></i>Tümünü Gör
                </a>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="transactionsTable" class="table table-hover">
                        <thead>
                            <tr>
                                <th>Tarih</th>
                                <th>Banka</th>
                                <th>Açıklama</th>
                                <th class="text-end">Tutar</th>
                                <th>Tip</th>
                                <th>Durum</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var transaction in (Model?.LatestTransactions ?? Enumerable.Empty<TurkSoft.BankWebUI.Models.BankTransaction>()))
                            {
                                <tr>
                                    <td>@transaction.Date.ToString("dd.MM.yyyy HH:mm")</td>
                                    <td>@transaction.BankName</td>
                                    <td>@transaction.Description</td>
                                    <td class="text-end @(transaction.Debit > 0 ? "text-danger" : "text-success")">
                                        @if (transaction.Debit > 0)
                                        {
                                            <span>-@transaction.Debit.ToString("N2") ₺</span>
                                        }
                                        else
                                        {
                                            <span>+@transaction.Credit.ToString("N2") ₺</span>
                                        }
                                    </td>
                                    <td>@transaction.AccountType</td>
                                    <td>
                                        @if (transaction.Debit > 0)
                                        {
                                            <span class="badge bg-danger">Çıkış</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success">Giriş</span>
                                        }
                                    </td>
                                </tr>
                            }

                            @if (Model?.LatestTransactions == null || !Model.LatestTransactions.Any())
                            {
                                <tr>
                                    <td colspan="6" class="text-muted text-center py-3">
                                        Henüz işlem kaydı yok (WS veri döndürmedi).
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {

            // DataTables
            if ($.fn.DataTable) {
                $('#transactionsTable').DataTable({
                    language: {
                        url: '//cdn.datatables.net/plug-ins/1.13.8/i18n/tr.json'
                    },
                    order: [[0, 'desc']],
                    pageLength: 10
                });
            }

            // Chart.js
            if (typeof Chart !== 'undefined') {
                const canvas = document.getElementById('cashflowChart');
                if (canvas) {
                    const ctx = canvas.getContext('2d');

                    const labels = @Html.Raw(labelsJson);
                    const netData = @Html.Raw(netJson);

                    new Chart(ctx, {
                        type: 'line',
                        data: {
                            labels: labels,
                            datasets: [{
                                label: 'Net Nakit Akışı (₺)',
                                data: netData,
                                borderColor: 'rgb(54, 162, 235)',
                                backgroundColor: 'rgba(54, 162, 235, 0.2)',
                                tension: 0.3,
                                fill: true
                            }]
                        },
                        options: {
                            responsive: true,
                            plugins: {
                                legend: { position: 'top' }
                            },
                            scales: {
                                y: {
                                    beginAtZero: true,
                                    ticks: {
                                        callback: function (value) {
                                            return value.toLocaleString('tr-TR') + ' ₺';
                                        }
                                    }
                                }
                            }
                        }
                    });
                }
            }
        });
    </script>
}

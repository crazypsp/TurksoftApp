@{
    ViewData["Title"] = "Giden e-Adisyonlar";
    ViewData["Subtitle"] = "e-Adisyon";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>
        e-Adisyon
        <small>Giden e-Adisyonlar</small>
    </h1>
    <ol class="breadcrumb">
        <li><a asp-controller="Home" asp-action="Index"><i class="fa fa-home"></i></a> e-Adisyon</li>
        <li class="active">Giden e-Adisyonlar</li>
    </ol>
</section>

<section class="content">
    <div class="box box-default">
        <div class="box-header with-border">
            <h3 class="box-title">Arama Seçenekleri</h3>
        </div>
        <div class="box-body" id="btnAramaYapEnter">
            <div class="row">
                <div class="col-md-3">
                    <div class="form-horizontal row">
                        <label class="control-label col-sm-6">Alıcı VKN/TCKN</label>
                        <div class="col-sm-6">
                            <input id="TargetIdentifier" type="text" maxlength="11" class="form-control" />
                        </div>
                    </div>
                    <div class="form-horizontal row">
                        <label class="control-label col-sm-6">Alıcı Unvan</label>
                        <div class="col-sm-6">
                            <input id="TargetTitle" type="text" class="form-control" />
                        </div>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="form-horizontal row">
                        <label class="control-label col-sm-6">Adisyon Tarihi (Başlangıç)</label>
                        <div class="col-sm-6">
                            <div class="input-group">
                                <div class="input-group-addon"><i class="fa fa-calendar"></i></div>
                                <input id="IssueDateStart" type="text" class="form-control datepicker" />
                            </div>
                        </div>
                    </div>
                    <div class="form-horizontal row">
                        <label class="control-label col-sm-6">Adisyon Tarihi (Bitiş)</label>
                        <div class="col-sm-6">
                            <div class="input-group">
                                <div class="input-group-addon"><i class="fa fa-calendar"></i></div>
                                <input id="IssueDateEnd" type="text" class="form-control datepicker" />
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="form-horizontal row">
                        <label class="control-label col-sm-6">İşlem Tarihi (Başlangıç)</label>
                        <div class="col-sm-6">
                            <div class="input-group">
                                <div class="input-group-addon"><i class="fa fa-calendar"></i></div>
                                <input id="CreatedDateStart" type="text" class="form-control datepicker" />
                            </div>
                        </div>
                    </div>
                    <div class="form-horizontal row">
                        <label class="control-label col-sm-6">İşlem Tarihi (Bitiş)</label>
                        <div class="col-sm-6">
                            <div class="input-group">
                                <div class="input-group-addon"><i class="fa fa-calendar"></i></div>
                                <input id="CreatedDateEnd" type="text" class="form-control datepicker" />
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="form-horizontal row">
                        <label class="control-label col-sm-6">Ödenecek Tutar</label>
                        <div class="col-sm-6">
                            <input id="PayableAmount" type="number" class="form-control" />
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="box-footer">
            <div class="pull-left">
                <div class="btn-group">
                    <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                        Toplu İşlem Seçiniz <span class="fa fa-caret-down"></span>
                    </button>
                    <ul class="dropdown-menu">
                        <li><a href="#" onclick="downloadSelected()"><i class="fa fa-download"></i> Seçilileri İndir</a></li>
                        <li><a href="#" onclick="sendMailSelected()"><i class="fa fa-envelope"></i> Seçilileri Mail Gönder</a></li>
                        <li><a href="#" onclick="deleteSelected()"><i class="fa fa-remove"></i> Seçilileri Sil</a></li>
                    </ul>
                </div>
            </div>

            <div class="pull-right">
                <button class="btn btn-success" onclick="gridSearch()">Arama Yap <i class="glyphicon glyphicon-search"></i></button>
                <button class="btn btn-danger" onclick="clearSearchInputs()">Temizle <i class="glyphicon glyphicon-remove-circle"></i></button>
            </div>
        </div>
    </div>

    <div class="box box-primary">
        <div class="box-body table-responsive">
            <table id="grid_outboxAdisyon" class="table table-bordered table-hover dataTable dt-head-center">
                <thead>
                    <tr>
                        <th><input type="checkbox" /></th>
                        <th>Adisyon No</th>
                        <th>Firma Adı</th>
                        <th>Vergi Kimlik No</th>
                        <th>Senaryo</th>
                        <th>Adisyon Tarihi</th>
                        <th>Ödenecek Tutar</th>
                        <th>Durum</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    <tr><td colspan="9" class="text-center">Tabloda herhangi bir veri mevcut değil</td></tr>
                </tbody>
            </table>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        $(function () {
            $('#grid_outboxAdisyon').DataTable({
                "language": { "url": "//cdn.datatables.net/plug-ins/1.10.21/i18n/Turkish.json" }
            });
        });

        function gridSearch() { alert("Giden e-Adisyon arama işlemi yapılacak."); }
        function clearSearchInputs() { $('input').val(''); $('select').val(''); }
        function downloadSelected() { alert("Seçilen adisyonlar indirilecek."); }
        function sendMailSelected() { alert("Seçilen adisyonlar e-posta olarak gönderilecek."); }
        function deleteSelected() { alert("Seçilen adisyonlar silinecek."); }
    </script>
}

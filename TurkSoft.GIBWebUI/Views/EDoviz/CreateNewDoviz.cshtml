@{
    ViewData["Title"] = "Yeni Adisyon Oluştur";
    ViewData["Subtitle"] = "e-Adisyon";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<section class="content-header">
    <h1><i class="fa fa-dollar"></i> Döviz / Kıymetli Maden Oluştur</h1>
</section>

<section class="content">

    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">Temel Bilgiler</h3>
        </div>

        <div class="box-body">

            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label>Belge Tarihi</label>
                        <input type="text" class="form-control datepicker" ng-model="doviz.BelgeTarihi" placeholder="gg.aa.yyyy" />
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label>Belge No</label>
                        <input type="text" class="form-control" ng-model="doviz.BelgeNo" placeholder="Belge numarası giriniz" />
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label>Para Birimi</label>
                        <select class="form-control select2" ng-model="doviz.ParaBirimi">
                            <option value="">Seçiniz</option>
                            <option value="USD">USD - Amerikan Doları</option>
                            <option value="EUR">EUR - Euro</option>
                            <option value="GBP">GBP - İngiliz Sterlini</option>
                            <option value="TRY">TRY - Türk Lirası</option>
                        </select>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">Müşteri Bilgileri</h3>
        </div>

        <div class="box-body">

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Müşteri Unvanı</label>
                        <input type="text" class="form-control" ng-model="doviz.MusteriUnvani" placeholder="Firma / Müşteri adı giriniz" />
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label>Vergi No / TCKN</label>
                        <input type="text" class="form-control" ng-model="doviz.VergiNo" placeholder="Vergi no giriniz" />
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label>Ülke</label>
                        <input type="text" class="form-control" ng-model="doviz.Ulke" placeholder="Ülke adı giriniz" />
                    </div>
                </div>
            </div>

        </div>
    </div>

    <div class="box box-success">
        <div class="box-header with-border">
            <h3 class="box-title">Döviz / Kıymetli Maden Detayları</h3>
        </div>

        <div class="box-body">
            <table id="dovizTable" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Ürün / Maden Adı</th>
                        <th>Miktar</th>
                        <th>Birim Fiyat</th>
                        <th>Tutar</th>
                        <th>İşlem</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="kalem in doviz.Kalemler">
                        <td><input type="text" class="form-control" ng-model="kalem.UrunAdi" placeholder="Altın, Gümüş, USD, EUR..." /></td>
                        <td><input type="number" class="form-control" ng-model="kalem.Miktar" /></td>
                        <td><input type="number" class="form-control" ng-model="kalem.BirimFiyat" /></td>
                        <td>{{ kalem.Miktar * kalem.BirimFiyat | currency:'₺' }}</td>
                        <td>
                            <button class="btn btn-danger btn-sm" ng-click="kalemSil($index)">
                                <i class="fa fa-trash"></i>
                            </button>
                        </td>
                    </tr>
                </tbody>
            </table>

            <button class="btn btn-primary" ng-click="kalemEkle()"><i class="fa fa-plus"></i> Yeni Satır Ekle</button>
        </div>

        <div class="box-footer text-right">
            <strong>Toplam Tutar: </strong> {{ toplamTutar() | currency:'₺' }}
        </div>
    </div>

    <div class="box box-warning">
        <div class="box-body text-right">
            <button class="btn btn-success" ng-click="kaydet()"><i class="fa fa-check"></i> Kaydet</button>
            <button class="btn btn-default" ng-click="temizle()"><i class="fa fa-refresh"></i> Temizle</button>
        </div>
    </div>

</section>


@section Scripts {

    <script>
        var app = angular.module('EDovizApp', []);
        app.controller('DovizController', function ($scope) {
            $scope.doviz = { Kalemler: [] };

            $scope.kalemEkle = function () {
                $scope.doviz.Kalemler.push({ UrunAdi: '', Miktar: 0, BirimFiyat: 0 });
            };

            $scope.kalemSil = function (index) {
                $scope.doviz.Kalemler.splice(index, 1);
            };

            $scope.toplamTutar = function () {
                return $scope.doviz.Kalemler.reduce((t, k) => t + (k.Miktar * k.BirimFiyat || 0), 0);
            };

            $scope.kaydet = function () {
                Swal.fire({
                    icon: 'success',
                    title: 'Kayıt Başarılı',
                    text: 'Döviz / Kıymetli Maden kaydı başarıyla oluşturuldu.'
                });
            };

            $scope.temizle = function () {
                $scope.doviz = { Kalemler: [] };
            };
        });

        $(function () {
            $('.select2').select2();
            $('.datepicker').datepicker({
                format: 'dd.mm.yyyy',
                autoclose: true
            });
        });
    </script>
}

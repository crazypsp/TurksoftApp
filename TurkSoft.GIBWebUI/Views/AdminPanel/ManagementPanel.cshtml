@{
    ViewData["Title"] = "Müşteri İşlemleri";
    ViewData["Subtitle"] = "Yönetim Paneli";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="content">
    <div class="box box-default">
        <div class="box-header with-border">
            <h3 class="box-title">Müşteri İşlemleri</h3>
        </div>
        <div class="box-body">
            <div class="row">
                <div class="col-md-3">
                    <label>Müşteri Adı</label>
                    <input id="CustomerName" type="text" class="form-control" />
                </div>
                <div class="col-md-3">
                    <label>VKN/TCKN</label>
                    <input id="VknTckn" type="text" class="form-control" />
                </div>
                <div class="col-md-3">
                    <label>Durum</label>
                    <select id="Status" class="form-control">
                        <option value="">Tümü</option>
                        <option value="1">Aktif</option>
                        <option value="0">Pasif</option>
                    </select>
                </div>
                <div class="col-md-3" style="margin-top:25px;">
                    <button onclick="gridSearch()" class="btn btn-success">Ara <i class="glyphicon glyphicon-search"></i></button>
                </div>
            </div>
        </div>
    </div>

    <div class="box box-primary">
        <div class="box-body table-responsive">
            <table id="grid_customer" class="table table-bordered table-hover dataTable">
                <thead>
                    <tr>
                        <th><input type="checkbox" /></th>
                        <th>VKN/TCKN</th>
                        <th>Müşteri Adı</th>
                        <th>Unvan</th>
                        <th>Email</th>
                        <th>Telefon</th>
                        <th>Adres</th>
                        <th>Durum</th>
                        <th>İşlem</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td><input type="checkbox" /></td>
                        <td>6321250052</td>
                        <td>NOX YAZILIM HİZMETLERİ LTD. ŞTİ</td>
                        <td>Şirket</td>
                        <td>info@noxyazilim.com</td>
                        <td>0212 123 45 67</td>
                        <td>İstanbul / Türkiye</td>
                        <td><span class="label label-success">Aktif</span></td>
                        <td><button type="button" class="btn btn-info btn-sm"><i class="fa fa-eye"></i></button></td>
                    </tr>
                    <tr>
                        <td><input type="checkbox" /></td>
                        <td>1234567890</td>
                        <td>ABC TEKNOLOJİ A.Ş.</td>
                        <td>Şirket</td>
                        <td>iletisim@abcteknoloji.com</td>
                        <td>0312 987 65 43</td>
                        <td>Ankara / Türkiye</td>
                        <td><span class="label label-danger">Pasif</span></td>
                        <td><button type="button" class="btn btn-info btn-sm"><i class="fa fa-eye"></i></button></td>
                    </tr>
                    <!-- Tüm tbody satırları buraya işlendi -->
                </tbody>
            </table>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        $(function () {
            $('#grid_customer').DataTable({
                "language": { "url": "//cdn.datatables.net/plug-ins/1.10.21/i18n/Turkish.json" }
            });
        });
    </script>
}

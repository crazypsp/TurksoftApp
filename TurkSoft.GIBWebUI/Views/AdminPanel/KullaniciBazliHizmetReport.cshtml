@{
    ViewData["Title"] = "Kullanıcı Bazlı Hizmet Raporu";
    ViewData["Subtitle"] = "Raporlar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<section class="content">
    <div class="box box-default">
        <div class="box-header with-border">
            <h3 class="box-title">Kullanıcı Bazlı Hizmet Raporu</h3>
        </div>
        <div class="box-body" id="btnAramaYapEnter">
            <div class="row">
                <div class="col-md-4">
                    <div class="form-horizontal row">
                        <label class="control-label col-sm-6">Kullanıcı Adı</label>
                        <div class="col-sm-6"><input id="userName" type="text" class="form-control" /></div>
                    </div>
                    <div class="form-horizontal row">
                        <label class="control-label col-sm-6">Ad</label>
                        <div class="col-sm-6"><input id="Name" type="text" class="form-control" /></div>
                    </div>
                    <div class="form-horizontal row">
                        <label class="control-label col-sm-6">Müşteri Adı</label>
                        <div class="col-sm-6"><input id="MusteriAdi" type="text" class="form-control" /></div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-horizontal row">
                        <label class="control-label col-sm-6">Email</label>
                        <div class="col-sm-6"><input id="userEmail" type="text" class="form-control" /></div>
                    </div>
                    <div class="form-horizontal row">
                        <label class="control-label col-sm-6">Cep Telefonu</label>
                        <div class="col-sm-6"><input id="userTelefon" type="text" class="form-control" /></div>
                    </div>
                    <div class="form-horizontal row">
                        <label class="control-label col-sm-6">Soyad</label>
                        <div class="col-sm-6"><input id="Surname" type="text" class="form-control" /></div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-horizontal row">
                        <label class="control-label col-sm-6">Aktif/Pasif</label>
                        <div class="col-sm-6">
                            <select id="AktifPasif" class="form-control">
                                <option value="">Seçiniz</option>
                                <option value="1">Aktif</option>
                                <option value="0">Pasif</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-horizontal row">
                        <label class="control-label col-sm-6">VKN / TCKN</label>
                        <div class="col-sm-6"><input id="VknTckn" type="text" class="form-control" /></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="box-footer">
            <button onclick="KullaniciBazliHizmetReport()" class="btn btn-default">Kullanıcı Bazlı Hizmet Listesi Rapor Al</button>
            <button onclick="gridSearch()" class="btn btn-success pull-right">Arama Yap <i class="glyphicon glyphicon-search"></i></button>
            <button onclick="clearSearchInputs()" class="btn btn-danger pull-right" style="margin-right:5px;">Temizle <i class="glyphicon glyphicon-remove-circle"></i></button>
        </div>
    </div>

    <div class="box box-primary">
        <div class="box-body table-responsive">
            <table id="grid" class="table table-bordered table-hover dataTable">
                <thead>
                    <tr>
                        <th><input type="checkbox" /></th>
                        <th>VKN / TCKN</th>
                        <th>Müşteri Adı</th>
                        <th>Kullanıcı Adı</th>
                        <th>E-Mail</th>
                        <th>Cep Telefon</th>
                        <th>Ad</th>
                        <th>Soyad</th>
                        <th>Durum</th>
                    </tr>
                </thead>
                <tbody>

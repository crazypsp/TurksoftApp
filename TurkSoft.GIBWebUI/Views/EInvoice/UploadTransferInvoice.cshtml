@{
    ViewData["Title"] = "e-Fatura";
    ViewData["Subtitle"] = "Transfer e-Fatura Yükle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section Styles {
    <style>
        .box {
            border: 1px solid #e5e5e5;
            margin-bottom: 15px;
        }

        .box-header {
            padding: 10px 15px;
            border-bottom: 1px solid #eee;
            background: #fafafa
        }

        .box-body {
            padding: 15px
        }

        .is-invalid {
            border-color: #e74c3c !important
        }

        .help-text {
            font-size: 12px;
            color: #777;
            margin-top: 6px;
            display: block
        }

        .dz {
            border: 2px dashed #b5b5b5;
            border-radius: 6px;
            padding: 16px;
            text-align: center;
            cursor: pointer;
            transition: all .15s ease-in-out;
            background: #fcfcfc;
        }

            .dz:hover {
                background: #f7f7f7
            }

            .dz.dragover {
                border-color: #3c8dbc;
                background: #eef6fb
            }

        .file-info {
            font-size: 12px;
            color: #333;
            margin-top: 6px;
            word-break: break-all
        }

        .actions-row {
            display: flex;
            gap: 10px;
            flex-wrap: wrap;
            align-items: center
        }

        .w150 {
            max-width: 150px
        }
    </style>
}

<section class="content">
    <form id="uploadForm" action="/EInvoice/Upload" method="post" enctype="multipart/form-data">

        <div class="row">
            <!-- Fatura XML -->
            <div class="col-md-6">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Fatura XML Aktarma</h3>
                    </div>
                    <div class="box-body form-horizontal">
                        <div class="form-group" style="margin:10px 20px 0 20px; padding-bottom:10px">
                            <label class="control-label">Fatura XML Zip Dosyası</label>
                            <div id="dz_invoice" class="dz" data-target="#files_0">
                                ZIP dosyasını buraya sürükleyin ya da tıklayın
                            </div>
                            <input type="file" class="hidden" name="files[0]" id="files_0" accept=".zip" />
                            <div id="info_files_0" class="file-info"></div>
                            <span class="help-text">Yalnızca .zip kabul edilir. Maks. 200 MB.</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Zarf XML -->
            <div class="col-md-6">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Zarf XML Aktarma</h3>
                    </div>
                    <div class="box-body form-horizontal">
                        <div class="form-group" style="margin:10px 20px 0 20px; padding-bottom:10px">
                            <label class="control-label">Zarf XML Zip Dosyası</label>
                            <div id="dz_envelope" class="dz" data-target="#files_1">
                                ZIP dosyasını buraya sürükleyin ya da tıklayın
                            </div>
                            <input type="file" class="hidden" name="files[1]" id="files_1" accept=".zip" />
                            <div id="info_files_1" class="file-info"></div>
                            <span class="help-text">Yalnızca .zip kabul edilir. Maks. 200 MB.</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Seçenekler -->
        <div class="box box-default">
            <div class="box-body">
                <div class="row actions-row">
                    <div class="col-sm-3">
                        <label>Entegrator</label>
                        <select class="form-control" id="entegrator" name="entegrator">
                            <option value="">Seçiniz</option>
                            <option value="1">Medyasoft</option>
                            <option value="2">İsis Bilişim</option>
                            <option value="3">Fit Solutions</option>
                            <option value="4">Hizli Teknoloji</option>
                            <option value="5">Zirve Donusum</option>
                            <option value="6">Kolaysoft Teknoloji</option>
                            <option value="7">Smart Dönüşüm</option>
                            <option value="8">İng Bank</option>
                            <option value="9">Finans Bank</option>
                            <option value="10">Uni-dox</option>
                            <option value="11">TürkKep</option>
                            <option value="12">Logo Yazılım</option>
                            <option value="13">Edm Bilişim</option>
                            <option value="14">4C Teknoloji</option>
                            <option value="15">Digital Planet</option>
                            <option value="16">Uyumsoft</option>
                            <option value="17">İzibiz</option>
                            <option value="18">Mikro</option>
                            <option value="19">Gib Portal</option>
                            <option value="20">Hizli Teknoloji 20</option>
                            <option value="21">Edoksis.Net</option>
                        </select>
                    </div>

                    <div class="col-sm-3">
                        <label>Fatura Tipi</label>
                        <select class="form-control" id="tip" name="tip">
                            <option value="">Seçiniz</option>
                            <option value="1">Gelen Fatura</option>
                            <option value="2">Giden Fatura</option>
                        </select>
                    </div>

                    <div class="col-sm-6 text-right" style="margin-top:24px;">
                        <button type="button" id="btnClear" class="btn btn-default">
                            Temizle <i class="glyphicon glyphicon-remove-circle"></i>
                        </button>
                        <button type="submit" name="Upload" id="Upload" class="btn btn-success">
                            YÜKLE <span class="btn-label"><i class="glyphicon glyphicon-upload"></i></span>
                        </button>
                    </div>
                </div>

                <strong><span id="lbl_bilgi" class="help-text" style="font-size:13px;"></span></strong>
            </div>
        </div>
    </form>
</section>

@section Scripts {
    <script>
        (function(){
            // ---- Yardımcılar
            var MAX_MB = 200; // 200 MB limit
            function toastOk(m){ if(window.toastr && toastr.success) toastr.success(m); else $('#lbl_bilgi').text(m); }
            function toastErr(m){ if(window.toastr && toastr.error) toastr.error(m); else $('#lbl_bilgi').text(m); }
            function bytesToSize(bytes){
                if(bytes===0) return '0 B';
                var k=1024, sizes=['B','KB','MB','GB','TB'], i=Math.floor(Math.log(bytes)/Math.log(k));
                return (bytes/Math.pow(k,i)).toFixed(i?1:0)+' '+sizes[i];
            }
            function isZip(file){ return file && /\.zip$/i.test(file.name); }
            function isSizeOk(file){ return file && (file.size <= MAX_MB*1024*1024); }

            // ---- Dropzone bağlama
            function bindDropzone($dz){
                var targetSel = $dz.data('target');
                var $input = $(targetSel);
                $dz.on('click', function(){ $input.trigger('click'); });
                $dz.on('dragover dragenter', function(e){ e.preventDefault(); e.stopPropagation(); $dz.addClass('dragover'); });
                $dz.on('dragleave dragend drop', function(e){ e.preventDefault(); e.stopPropagation(); $dz.removeClass('dragover'); });
                $dz.on('drop', function(e){
                    var dt = e.originalEvent.dataTransfer;
                    if(dt && dt.files && dt.files.length){
                        $input[0].files = dt.files; // set dropped file
                        handleFileChange($input);
                    }
                });
            }

            // ---- Dosya değişiminde bilgi/validasyon
            function handleFileChange($input){
                var file = $input[0].files && $input[0].files[0];
                var infoId = '#info_' + $input.attr('id');
                var $info = $(infoId);
                var $dz = $('[data-target="#'+$input.attr('id')+'"]');

                // Temizle
                $input.removeClass('is-invalid');
                $info.empty();

                if(!file){
                    return; // seçilmediyse
                }
                // Uzantı & Boyut kontrolü
                var ok = true, msg=[];
                if(!isZip(file)){ ok=false; msg.push('Yalnızca .zip dosyası yükleyebilirsiniz.'); }
                if(!isSizeOk(file)){ ok=false; msg.push('Dosya boyutu 200 MB\'ı geçemez.'); }

                if(!ok){
                    $input.addClass('is-invalid');
                    $info.html('<span style="color:#e74c3c">'+msg.join(' ')+'</span>');
                    return;
                }

                // Özet bilgisi
                $info.html('Seçilen: <b>'+file.name+'</b> ('+bytesToSize(file.size)+')');
                // Kullanıcıya minik ipucu
                toastOk('Dosya hazır: '+file.name);
            }

            // ---- Alanları ve submit’i kontrol et
            function validateAll(){
                var hasInv = $('#files_0')[0].files.length>0;
                var hasEnv = $('#files_1')[0].files.length>0;
                var ent = $('#entegrator').val();
                var tip = $('#tip').val();

                // En az 1 dosya zorunlu
                if(!hasInv && !hasEnv){
                    $('#files_0, #files_1').addClass('is-invalid');
                    toastErr('En az bir ZIP dosyası seçmelisiniz (Fatura veya Zarf).');
                    return false;
                }
                // Dosya validasyonundan sonra tekrar kontrol
                if($('#files_0').hasClass('is-invalid') || $('#files_1').hasClass('is-invalid')){
                    toastErr('Lütfen hatalı dosya seçimlerini düzeltin.');
                    return false;
                }
                // Entegratör & Tip
                if(!ent){
                    $('#entegrator').addClass('is-invalid');
                    toastErr('Lütfen Entegratör seçiniz.');
                    return false;
                } else {
                    $('#entegrator').removeClass('is-invalid');
                }
                if(!tip){
                    $('#tip').addClass('is-invalid');
                    toastErr('Lütfen Fatura Tipi seçiniz.');
                    return false;
                } else {
                    $('#tip').removeClass('is-invalid');
                }
                return true;
            }

            // ---- Event bağlama
            bindDropzone($('#dz_invoice'));
            bindDropzone($('#dz_envelope'));

            $('#files_0').on('change', function(){ handleFileChange($(this)); });
            $('#files_1').on('change', function(){ handleFileChange($(this)); });

            $('#entegrator, #tip').on('change', function(){ $(this).removeClass('is-invalid'); });

            // Enter ile gönder
            $('#uploadForm').on('keypress', 'input,select', function(e){
                if(e.which===13){
                    e.preventDefault();
                    $('#Upload').click();
                }
            });

            // Submit
            $('#uploadForm').on('submit', function(e){
                $('#lbl_bilgi').text('');
                if(!validateAll()){
                    e.preventDefault();
                    return false;
                }
                // Çift tıklama koruması
                var $btn = $('#Upload');
                $btn.prop('disabled', true).html('<i class="fa fa-spinner fa-spin"></i> Yükleniyor...');
                // Normal form submit akışı devam eder
            });

            // Temizle
            $('#btnClear').on('click', function(){
                // input[type=file] reset
                $('#files_0, #files_1').val('').removeClass('is-invalid');
                $('#info_files_0, #info_files_1').empty();
                $('#entegrator, #tip').val('').removeClass('is-invalid');
                $('#lbl_bilgi').text('');
                toastOk('Form temizlendi.');
            });
        })();
    </script>
}


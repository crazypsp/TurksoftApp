@{
    Layout = null;
}

@using TurkSoft.GIBWebUI.AppSettings
@inject Microsoft.Extensions.Options.IOptions<ApiSettings> ApiSettings

<!doctype html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />

    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400&display=swap" rel="stylesheet" />

    <link rel="stylesheet" href="@Url.Content("~/login/fonts/icomoon/style.css")" />
    <link rel="stylesheet" href="@Url.Content("~/login/css/owl.carousel.min.css")" />
    <link rel="stylesheet" href="@Url.Content("~/login/css/bootstrap.min.css")" />
    <link rel="stylesheet" href="@Url.Content("~/login/css/style.css")" />

    <title>Giriş</title>

    <!-- API Base URL bilgileri -->
    <meta name="api-base" content="@ApiSettings.Value.BaseUrl" />

    <script>
        // Backend'den gelen API adreslerini JS tarafına geçiriyoruz
        window.__API_BASE = "@ApiSettings.Value.BaseUrl";
        console.log("API Base (Login):", window.__API_BASE);

        window.gibPortalApiBaseUrl = "@ApiSettings.Value.GibPortalApiBaseUrl";
        console.log("GIB Portal API Base:", window.gibPortalApiBaseUrl);
    </script>
</head>
<body>
    <div class="d-lg-flex half">
        <div class="bg order-1 order-md-2"
             style="background-image:url('@Url.Content("~/login/images/nox_musavirim_login-02.png")');">
        </div>

        <div class="contents order-2 order-md-1">
            <div class="container">
                <div class="row align-items-center justify-content-center">
                    <div class="col-md-7">
                        <h3>Sisteme Giriş</h3>
                        <p class="mb-4">Lütfen kullanıcı bilgilerinizi giriniz.</p>

                        <!-- Login formu -->
                        <form id="loginForm"
                              data-home-url="@Url.Action("Index", "Home")"
                              asp-controller="Login" asp-action="Index"
                              method="post" autocomplete="off" novalidate>
                            @Html.AntiForgeryToken()

                            <div class="form-group first">
                                <label for="Email">E-posta</label>
                                <input type="text" class="form-control" name="Email" id="Email"
                                       placeholder="mail@adresiniz.com" />
                            </div>

                            <div class="form-group last mb-3">
                                <label for="Password">Şifre</label>
                                <input type="password" class="form-control" name="Password" id="Password"
                                       placeholder="Şifreniz" />
                            </div>

                            <div class="d-flex mb-5 align-items-center">
                                <label class="control control--checkbox mb-0">
                                    <span class="caption">Beni hatırla</span>
                                    <input type="checkbox" name="RememberMe" />
                                    <div class="control__indicator"></div>
                                </label>
                                <span class="ml-auto">
                                    <a asp-action="ForgotPassword" class="forgot-pass">Şifremi unuttum</a>
                                </span>
                            </div>

                            <button type="submit" class="btn btn-block btn-primary">Giriş Yap</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bağımlı JS dosyaları -->
    <script src="@Url.Content("~/login/js/jquery-3.3.1.min.js")"></script>
    <script src="@Url.Content("~/login/js/popper.min.js")"></script>
    <script src="@Url.Content("~/login/js/bootstrap.min.js")"></script>
    <script src="@Url.Content("~/login/js/main.js")"></script>

    <!-- JSZip (global JSZip objesi, login.js bundan sonra çalışacak) -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.10.1/jszip.min.js"
            integrity="sha512-XMVd28F1oH/O71fzwBnV7HucLxVwtxf26XV8P4wPk26EDxuGZ91N8bsOttmnomcCD3CS5ZMRL50H0GgOHvegtg=="
            crossorigin="anonymous"
            referrerpolicy="no-referrer"></script>

    <!-- Login akışını yöneten module -->
    <script type="module" src="@Url.Content("~/apps/login.js")"></script>

</body>
</html>

@{
    ViewData["Title"] = "Vergi Listesi";
    ViewData["Subtitle"] = "Listeler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>Listeler <small>Vergi Listesi</small></h1>
</section>

<section class="content">
    <div class="box box-primary">
        <div class="box-header with-border">
            <button id="btnNewTax" class="btn btn-success btn-sm pull-right">
                <i class="fa fa-plus"></i> Yeni Vergi Ekle
            </button>
        </div>
        <div class="box-body">
            <table id="grid_taxlist" class="table table-bordered table-hover dataTable">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Vergi Adı</th>
                        <th>Açıklama</th>
                        <th>Oran (%)</th>
                        <th>Oluşturma</th>
                        <th>Güncelleme</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
</section>

<!-- Vergi Modal -->
<div class="modal fade" id="mdlTax" tabindex="-1" role="dialog" aria-labelledby="mdlTaxLabel">
    <div class="modal-dialog modal-md" role="document">
        <div class="modal-content">
            <form id="frmTax">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Kapat"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="mdlTaxLabel">Vergi Bilgisi</h4>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="taxId" />

                    <div class="form-group">
                        <label for="taxName">Vergi Adı</label>
                        <input type="text" class="form-control" id="taxName" required />
                    </div>

                    <div class="form-group">
                        <label for="taxDesc">Açıklama</label>
                        <textarea class="form-control" id="taxDesc" rows="2"></textarea>
                    </div>

                    <div class="form-group">
                        <label for="taxRate">Oran (%)</label>
                        <input type="number" class="form-control" id="taxRate" min="0" max="100" step="0.01" required />
                    </div>

                    <div class="form-group">
                        <label for="taxCreatedAt">Oluşturma Tarihi</label>
                        <input type="date" class="form-control" id="taxCreatedAt" />
                    </div>

                    <div class="form-group">
                        <label for="taxUpdatedAt">Güncelleme Tarihi</label>
                        <input type="date" class="form-control" id="taxUpdatedAt" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Kaydet</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Kapat</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script type="module" src="~/apps/taxlist.js"></script>
}

@{
    ViewData["Title"] = "GİB Durum Kodları";
    ViewData["Subtitle"] = "Listeler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>Listeler <small>GİB Durum Kodları</small></h1>
</section>

<section class="content">
    <div class="box box-primary">
        <div class="box-header with-border">
            <button id="btnNewDurumKod" class="btn btn-success btn-sm pull-right">
                <i class="fa fa-plus"></i> Yeni Durum Kodu Ekle
            </button>
        </div>
        <div class="box-body">
            <table id="grid_DurumKod" class="table table-bordered table-hover dataTable">
                <thead>
                    <tr>
                        <th>Durum Kodu</th>
                        <th>Sebep</th>
                        <th>Çözüm</th>
                        <th>Yapılması Gereken</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
</section>

<!-- Durum Kod Modal -->
<div class="modal fade" id="mdlDurumKod" tabindex="-1" role="dialog" aria-labelledby="mdlDurumKodLabel">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <form id="frmDurumKod">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Kapat">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="modal-title" id="mdlDurumKodLabel">Durum Kodu Bilgisi</h4>
                </div>

                <div class="modal-body">
                    <input type="hidden" id="drmId" />

                    <div class="form-group">
                        <label for="drmCode">Durum Kodu</label>
                        <input type="text" class="form-control" id="drmCode" required />
                    </div>

                    <div class="form-group">
                        <label for="drmTitle">Sebep</label>
                        <input type="text" class="form-control" id="drmTitle" required />
                    </div>

                    <div class="form-group">
                        <label for="drmSolution">Çözüm</label>
                        <textarea class="form-control" id="drmSolution" rows="2"></textarea>
                    </div>

                    <div class="form-group">
                        <label for="drmSolution2">Yapılması Gereken</label>
                        <textarea class="form-control" id="drmSolution2" rows="2"></textarea>
                    </div>

                    <div class="form-group">
                        <label for="drmType">Tür</label>
                        <input type="text" class="form-control" id="drmType" value="DurumKod" readonly />
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Kaydet</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Kapat</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script type="module" src="~/js/pages/Lists/DurumKod.js"></script>
}

@{
    ViewData["Title"] = "Özel Matrah Kodları";
    ViewData["Subtitle"] = "Listeler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>Listeler <small>Özel Matrah Kod Listesi</small></h1>
</section>

<section class="content">
    <div class="box box-primary">
        <div class="box-header with-border">
            <button id="btnNewOzelMatrah" class="btn btn-success btn-sm pull-right">
                <i class="fa fa-plus"></i> Yeni Özel Matrah Ekle
            </button>
        </div>
        <div class="box-body">
            <table id="grid_OzelMatrah" class="table table-bordered table-hover dataTable">
                <thead>
                    <tr>
                        <th>Özel Matrah Kodu</th>
                        <th>Özel Matrah Adı</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
</section>

<!-- Özel Matrah Modal -->
<div class="modal fade" id="mdlOzelMatrah" tabindex="-1" role="dialog" aria-labelledby="mdlOzelMatrahLabel">
    <div class="modal-dialog modal-md" role="document">
        <div class="modal-content">
            <form id="frmOzelMatrah">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Kapat">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="modal-title" id="mdlOzelMatrahLabel">Özel Matrah Kodu Bilgisi</h4>
                </div>

                <div class="modal-body">
                    <input type="hidden" id="ozId" />

                    <div class="form-group">
                        <label for="ozCode">Özel Matrah Kodu</label>
                        <input type="text" class="form-control" id="ozCode" required />
                    </div>

                    <div class="form-group">
                        <label for="ozTitle">Özel Matrah Adı</label>
                        <input type="text" class="form-control" id="ozTitle" required />
                    </div>

                    <div class="form-group">
                        <label for="ozSolution">Açıklama / Çözüm 1</label>
                        <textarea class="form-control" id="ozSolution" rows="2"></textarea>
                    </div>

                    <div class="form-group">
                        <label for="ozSolution2">Açıklama / Çözüm 2</label>
                        <textarea class="form-control" id="ozSolution2" rows="2"></textarea>
                    </div>

                    <div class="form-group">
                        <label for="ozType">Tür</label>
                        <input type="text" class="form-control" id="ozType" value="SpecialBase" readonly />
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Kaydet</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Kapat</button>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <script type="module" src="~/apps/specialbasecodes.js"></script>
}

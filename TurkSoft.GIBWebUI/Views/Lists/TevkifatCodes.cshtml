@{
    ViewData["Title"] = "Tevkifat Kodları";
    ViewData["Subtitle"] = "Listeler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>Listeler <small>Tevkifat Kodları</small></h1>
</section>

<section class="content">
    <div class="box box-primary">
        <div class="box-header with-border">
            <button id="btnNewTevkifat" class="btn btn-success btn-sm pull-right">
                <i class="fa fa-plus"></i> Yeni Tevkifat Ekle
            </button>
        </div>
        <div class="box-body">
            <table id="grid_Tevkifat" class="table table-bordered table-hover dataTable">
                <thead>
                    <tr>
                        <th>Tevkifat Kodu</th>
                        <th>Tevkifat Adı</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
</section>

<!-- Tevkifat Modal -->
<div class="modal fade" id="mdlTevkifat" tabindex="-1" role="dialog" aria-labelledby="mdlTevkifatLabel">
    <div class="modal-dialog modal-md" role="document">
        <div class="modal-content">
            <form id="frmTevkifat">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Kapat">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="modal-title" id="mdlTevkifatLabel">Tevkifat Kodu Bilgisi</h4>
                </div>

                <div class="modal-body">
                    <input type="hidden" id="tevId" />

                    <div class="form-group">
                        <label for="tevCode">Tevkifat Kodu</label>
                        <input type="text" class="form-control" id="tevCode" required />
                    </div>

                    <div class="form-group">
                        <label for="tevTitle">Tevkifat Adı</label>
                        <input type="text" class="form-control" id="tevTitle" required />
                    </div>

                    <div class="form-group">
                        <label for="tevSolution">Açıklama / Çözüm 1</label>
                        <textarea class="form-control" id="tevSolution" rows="2"></textarea>
                    </div>

                    <div class="form-group">
                        <label for="tevSolution2">Açıklama / Çözüm 2</label>
                        <textarea class="form-control" id="tevSolution2" rows="2"></textarea>
                    </div>

                    <div class="form-group">
                        <label for="tevType">Tür</label>
                        <input type="text" class="form-control" id="tevType" value="Tevkifat" readonly />
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Kaydet</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Kapat</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script type="module" src="~/apps/tevkifatcodes.js"></script>
}

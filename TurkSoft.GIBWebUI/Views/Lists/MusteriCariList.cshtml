@{
    ViewData["Title"] = "Müşteri / Cari Listesi";
    ViewData["Subtitle"] = "Listeler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>Listeler <small>Müşteri / Cari Listesi</small></h1>
</section>

<section class="content">
    <div class="box box-primary">
        <div class="box-header with-border">
            <button id="btnNewCustomer" class="btn btn-success btn-sm pull-right">
                <i class="fa fa-plus"></i> Yeni Müşteri Ekle
            </button>
        </div>
        <div class="box-body">
            <table id="grid_cari" class="table table-bordered table-hover dataTable">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>VKN / TCKN</th>
                        <th>Vergi Dairesi</th>
                        <th>Adı</th>
                        <th>Soyadı</th>
                        <th>Telefon</th>
                        <th>E-Posta</th>
                        <th>Oluşturma</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
</section>

<!-- Müşteri Modal -->
<div class="modal fade" id="mdlCustomer" tabindex="-1" role="dialog" aria-labelledby="mdlCustomerLabel">
    <div class="modal-dialog modal-md" role="document">
        <div class="modal-content">
            <form id="frmCustomer">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Kapat"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="mdlCustomerLabel">Müşteri / Cari Bilgisi</h4>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="cusId" />

                    <div class="form-group">
                        <label for="cusName">Adı</label>
                        <input type="text" class="form-control" id="cusName" required />
                    </div>
                    <div class="form-group">
                        <label for="cusSurname">Soyadı</label>
                        <input type="text" class="form-control" id="cusSurname" required />
                    </div>
                    <div class="form-group">
                        <label for="cusPhone">Telefon</label>
                        <input type="text" class="form-control" id="cusPhone" placeholder="05xx xxx xx xx" />
                    </div>
                    <div class="form-group">
                        <label for="cusEmail">E-posta</label>
                        <input type="email" class="form-control" id="cusEmail" />
                    </div>
                    <div class="form-group">
                        <label for="cusTaxNo">Vergi No / TCKN</label>
                        <input type="text" class="form-control" id="cusTaxNo" />
                    </div>
                    <div class="form-group">
                        <label for="cusTaxOffice">Vergi Dairesi</label>
                        <input type="text" class="form-control" id="cusTaxOffice" />
                    </div>
                    <div class="form-group">
                        <label for="cusCreatedAt">Oluşturma Tarihi</label>
                        <input type="date" class="form-control" id="cusCreatedAt" />
                    </div>
                    <div class="form-group">
                        <label for="cusUpdatedAt">Güncelleme Tarihi</label>
                        <input type="date" class="form-control" id="cusUpdatedAt" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Kaydet</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Kapat</button>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <script type="module" src="~/apps/mustericarilist.js"></script>
}

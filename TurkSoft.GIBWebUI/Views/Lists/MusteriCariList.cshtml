@{
    ViewData["Title"] = "Müşteri / Cari Listesi";
    ViewData["Subtitle"] = "Listeler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <style>
        .dataTables_wrapper .dataTables_filter input {
            min-width: 240px;
        }

        .dt-head-center thead th {
            text-align: center;
        }

        .required::after {
            content: " *";
            color: #d9534f;
        }

        .modal .table caption {
            caption-side: top;
        }

        .panel-body {
            overflow: auto;
        }
    </style>
}

<section class="content">

    <div class="box box-default">
        <div class="box-header with-border">
            <h3 class="box-title">Müşteri / Cari Listesi</h3>
            <div class="box-tools pull-right">
                <button type="button" id="btnNewCustomer" class="btn btn-success btn-sm">
                    Yeni Müşteri&nbsp; <i class="fa fa-plus"></i>
                </button>
            </div>
        </div>

        <div class="box-body">
            <table id="gridCari" class="table table-bordered table-hover dataTable dt-head-center" width="100%">
                <thead>
                    <tr>
                        <th>Müşteri Kodu</th>
                        <th>VKN/TCKN</th>
                        <th>Vergi Dairesi</th>
                        <th>Ad / Ünvan</th>
                        <th>Soyad</th>
                        <th>Telefon</th>
                        <th>E-posta</th>
                        <th>Oluşturma Tarihi</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- JS dolduracak -->
                </tbody>
            </table>
        </div>
    </div>

   

</section>

@section Scripts {
    <!-- Bu sayfa için Customer JS (module) -->
    <script type="module" src="~/apps/MusteriCariList.js"></script>
}

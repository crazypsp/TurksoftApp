@{
    ViewData["Title"] = "İhraç Kayıtlı Kodları";
    ViewData["Subtitle"] = "Listeler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <style>
        .dataTables_wrapper .dataTables_filter input {
            min-width: 220px;
        }

        .box.box-primary {
            border-top-color: #3c8dbc;
        }

        .dt-head-center thead th {
            text-align: center;
        }

        td pre {
            white-space: pre-wrap;
            margin: 0;
            font-family: inherit;
        }
    </style>
}

<section class="content">
    <h2>İhraç Kayıtlı Kod Listesi</h2>

    <div class="box box-primary">
        <div class="box-body">
            <table id="grid_Export" class="table table-bordered table-hover dataTable dt-head-center" width="100%">
                <thead>
                    <tr>
                        <th style="width:20%">İhraç Kayıtlı Kodu</th>
                        <th style="width:80%">İhraç Kayıtlı Adı</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>701</td>
                        <td>3065 s. KDV Kanununun 11/1-c md. Kapsamındaki İhraç Kayıtlı Satış</td>
                    </tr>
                    <tr>
                        <td>704</td>
                        <td>3065 sayılı KDV Kanununun (11/1-c) maddesi ve 4760 s. ÖTV Kanununun 8/2. Md. Kapsamındaki İhraç Kayıtlı Satış</td>
                    </tr>
                    <tr>
                        <td>703</td>
                        <td>4760 s. ÖTV Kanununun 8/2 Md. Kapsamındaki İhraç Kayıtlı Satış</td>
                    </tr>
                    <tr>
                        <td>702</td>
                        <td>DİİB ve Geçici Kabul Rejimi Kapsamındaki Satışlar</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        $(function () {
            $('#grid_Export').DataTable({
                pageLength: 25,
                lengthMenu: [[25, 50, 100, -1], [25, 50, 100, "Tümü"]],
                order: [[0, 'asc']],
                columnDefs: [{ targets: 0, type: 'num' }],
                deferRender: true,
                stateSave: true,
                language: { url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/tr.json' }
            });
        });
    </script>
}

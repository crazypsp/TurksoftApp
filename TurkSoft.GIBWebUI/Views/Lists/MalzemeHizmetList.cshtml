@{
    ViewData["Title"] = "Malzeme/Hizmet Listesi";
    ViewData["Subtitle"] = "Stok";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <style>
        .dataTables_wrapper .dataTables_filter input {
            min-width: 240px;
        }

        .box {
            border: 1px solid #ddd;
            margin-bottom: 15px;
        }

        .box-header {
            padding: 10px 15px;
            border-bottom: 1px solid #eee;
            background: #fafafa;
        }

        .box-body {
            padding: 15px;
        }

        .box-footer {
            padding: 10px 15px;
            border-top: 1px solid #eee;
            background: #fafafa;
        }

        .dt-head-center thead th {
            text-align: center;
        }

        .input-xxs {
            width: 90px;
        }

        td pre {
            white-space: pre-wrap;
            margin: 0;
            font-family: inherit;
        }
    </style>
}

<section class="content">
    <h2>Malzeme/Hizmet Listesi</h2>

    <!-- Arama & Aksiyonlar -->
    <div class="box">
        <div class="box-header">
            <h3 class="box-title">Ürün/Hizmet Arama</h3>
        </div>
        <div class="box-body">
            <div class="row">
                <div class="form-group col-md-4">
                    <label>Ürün/Hizmet Kodu</label>
                    <input id="txtUrunKodu" type="text" class="form-control">
                </div>
                <div class="form-group col-md-4">
                    <label>Ürün/Hizmet Adı</label>
                    <input id="txtUrunHizmetAdi" type="text" class="form-control">
                </div>
            </div>
        </div>
        <div class="box-footer clearfix">
            <div class="pull-left">
                <button type="button" id="btnMalzemeOlustur" class="btn btn-success">
                    Yeni Oluştur &nbsp;<span class="btn-label"><i class="glyphicon glyphicon-plus"></i></span>
                </button>

                <label class="btn btn-default" for="FileExcel" style="margin-left:5px;">
                    Excel'den Aktar &nbsp;<span class="btn-label"><i class="glyphicon glyphicon-import"></i></span>
                </label>
                <input type="file" id="FileExcel" accept=".xlsx" style="display:none;">

                <button type="button" id="btnExceleAktar" class="btn btn-default" style="margin-left:5px;">
                    Excel'e Aktar &nbsp;<span class="btn-label"><i class="glyphicon glyphicon-export"></i></span>
                </button>

                <button type="button" id="btnTopluSil" class="btn btn-default" style="margin-left:5px;">
                    Seçilenleri Toplu Sil &nbsp;<span class="btn-label"><i class="glyphicon glyphicon-trash"></i></span>
                </button>
            </div>

            <div class="pull-right">
                <button type="button" id="btnAra" class="btn btn-success">Arama Yap <i class="glyphicon glyphicon-search"></i></button>
                <button type="button" id="btnTemizle" class="btn btn-danger">Temizle <i class="glyphicon glyphicon-remove-circle"></i></button>
            </div>
        </div>
    </div>

    <!-- Liste -->
    <div class="box">
        <div class="box-body" style="overflow:auto">
            <table id="gridStok" class="table table-bordered table-hover dataTable dt-head-center" width="100%">
                <thead>
                    <tr>
                        <th style="width:28px;"><input type="checkbox" id="chkAll" /></th>
                        <th>Ürün/Hizmet Kodu</th>
                        <th>Ürün/Hizmet Adı</th>
                        <th>GTİP Numarası</th>
                        <th>KDV (%)</th>
                        <th>Birim Fiyat</th>
                        <th style="width:110px;">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- JS ile doldurulacak -->
                </tbody>
            </table>
        </div>
    </div>
</section>



@section Scripts {
    <script>
        (function(){
            // ====== API Uçları (isteğe göre düzenleyin) ======
            var API = {
                exportUrl: '/stok/export',
                importUrl: '/stok/import-excel'
            };

            // ====== Global listeler yoksa küçük fallback'ler ======
            window.istisnaList   = window.istisnaList   || [{Kodu:"351", Type:"ISTISNA", Adi:"KDV - İstisna Olmayan Diğer"}];
            window.vergiList     = window.vergiList     || [{VergiKodu:"9015", VergiKisaAdi:"KDV TEVKİFATI"}];
            window.tevkifatList  = window.tevkifatList  || [{Kodu:"601", Adi:"Yapım İşleri", Orani:40}];
            window.birimList     = window.birimList     || [{BirimKodu:"C62", Aciklama:"ADET"}];
            window.parabirimList = window.parabirimList || [{Kodu:"TRY", Aciklama:"Türk Lirası"}];

            // ====== In-memory grid verisi (demo) ======
            var rows = [];      // tablo satırları
            var nextId = 1;     // basit id üretimi
            var currentTaxes = []; // modal içi vergi satırları

            var table;

            $(function(){
                initLookups();
                initTable();
                bindEvents();
            });

            function initLookups(){
                fillSelect($('#mdlBirim'), (window.birimList||[]).map(function(b){
                    return { value:b.BirimKodu, text: (b.Aciklama + ' - ' + b.BirimKodu) };
                }), true);

                fillSelect($('#mdlPara'), (window.parabirimList||[]).map(function(p){
                    return { value:p.Kodu, text: p.Aciklama };
                }), true);

                fillSelect($('#mdlIstisna'), (window.istisnaList||[]).map(function(i){
                    return { value:i.Kodu, text: (i.Type + ' - ' + i.Kodu + ' - ' + i.Adi) };
                }), true);
            }

            function fillSelect($sel, items, keepFirst){
                var first = keepFirst ? $sel.find('option').first() : null;
                $sel.empty();
                if(first && first.val()==="") $sel.append(first);
                (items||[]).forEach(function(it){
                    $sel.append($('<option/>',{value:it.value,text:it.text}));
                });
            }

            function initTable(){
                var $tbl = $('#gridStok');
                table = $tbl.DataTable({
                    data: [],
                    pageLength: 25,
                    order: [[1,'asc']],
                    columns: [
                        { data: 'Id', orderable:false, className:'text-center',
                          render: function(id){ return '<input type="checkbox" class="row-check" data-id="'+id+'">'; } },
                        { data: 'Kod' },
                        { data: 'Ad' },
                        { data: 'GtipNo' },
                        { data: 'KDVOrani', className:'text-right' },
                        { data: 'BirimFiyat', className:'text-right', render: function(v){
                            if(v==null || v==='') return '';
                            return parseFloat(v).toLocaleString('tr-TR',{minimumFractionDigits:2, maximumFractionDigits:4});
                        }},
                        { data: null, orderable:false, className:'text-center', render: function(row){
                            return ''+
                              '<button class="btn btn-xs btn-primary act-edit" data-id="'+row.Id+'"><i class="fa fa-edit"></i></button> '+
                              '<button class="btn btn-xs btn-danger act-del" data-id="'+row.Id+'"><i class="fa fa-trash"></i></button>';
                        }}
                    ],
                    language: { url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/tr.json' }
                });
            }

            function refreshTable(){
                table.clear().rows.add(rows).draw();
            }

            function bindEvents(){
                // Arama
                $('#btnAra').on('click', function(){
                    table.column(1).search($('#txtUrunKodu').val().trim());
                    table.column(2).search($('#txtUrunHizmetAdi').val().trim()).draw();
                });

                $('#btnTemizle').on('click', function(){
                    $('#txtUrunKodu,#txtUrunHizmetAdi').val('');
                    table.columns().search('').draw();
                });

                // Tümünü seç
                $('#chkAll').on('change', function(){
                    var ch = $(this).is(':checked');
                    $('#gridStok tbody .row-check').prop('checked', ch);
                });

                // Yeni
                $('#btnMalzemeOlustur').on('click', function(){ openModal(null); });

                // Kaydet
                $('#StokSave').on('click', function(){ saveFromModal(); });

                // KDV -> İstisna toggle
                $('#mdlKdv').on('change', function(){
                    if($(this).val()==='0') $('#istisnaDivId').show();
                    else { $('#istisnaDivId').hide(); $('#mdlIstisna').val(''); }
                });

                // Vergi satırı ekle
                $('#btnTaxAdd').on('click', function(){
                    currentTaxes.push({ VergiKodu:'', Oran:'', Tutar:'', TevkifatKodu:'' });
                    renderTaxes();
                });

                // Satır aksiyonları
                $(document).on('click', '.act-edit', function(){
                    var id = $(this).data('id');
                    var row = rows.find(function(r){ return r.Id===id; });
                    if(row) openModal(row);
                });

                $(document).on('click', '.act-del', function(){
                    var id = $(this).data('id');
                    if(!confirm('Kayıt silinsin mi?')) return;
                    rows = rows.filter(function(r){ return r.Id!==id; });
                    refreshTable();
                });

                // Toplu sil
                $('#btnTopluSil').on('click', function(){
                    var ids = [];
                    $('#gridStok tbody .row-check:checked').each(function(){ ids.push(parseInt($(this).data('id'),10)); });
                    if(ids.length===0){ alert('Seçim yok.'); return; }
                    if(!confirm(ids.length+' kayıt silinsin mi?')) return;
                    rows = rows.filter(function(r){ return ids.indexOf(r.Id)===-1; });
                    refreshTable();
                    $('#chkAll').prop('checked', false);
                });

                // Excel'e Aktar
                $('#btnExceleAktar').on('click', function(){
                    var q = $.param({
                        Kod: $('#txtUrunKodu').val()||'',
                        Ad:  $('#txtUrunHizmetAdi').val()||''
                    });
                    if(API.exportUrl) window.location = API.exportUrl + '?' + q;
                    else alert('Export URL tanımlı değil (API.exportUrl).');
                });

                // Excel'den Aktar
                $('#FileExcel').on('change', function(e){
                    var file = e.target.files && e.target.files[0];
                    if(!file){ return; }
                    if(!API.importUrl){ alert('Import URL tanımlı değil (API.importUrl).'); this.value=''; return; }

                    var fd = new FormData();
                    fd.append('file', file);
                    $.ajax({
                        url: API.importUrl, method:'POST', data: fd,
                        processData:false, contentType:false
                    }).done(function(){ alert('Excel yükleme tamamlandı.'); })
                      .fail(function(xhr){ alert('Excel yüklemede hata: ' + (xhr.responseText||xhr.statusText)); })
                      .always(function(){ $('#FileExcel').val(''); /* refreshTable(); */ });
                });
            }

            function openModal(row){
                // Temizle
                $('#UrunKayit')[0].reset();
                $('#mdlId').val(row ? row.Id : 0);
                $('#mdlSaticiKod').val(row ? (row.SaticiUrunKodu||row.Kod||'') : '');
                $('#mdlAd').val(row ? (row.Aciklama||row.Ad||'') : '');
                $('#mdlAliciKod').val(row ? (row.AliciUrunKodu||'') : '');
                $('#mdlBirim').val(row ? (row.BirimKodu||'') : '');
                $('#mdlKdv').val(row ? (row.KDVOrani!=null? String(row.KDVOrani):'') : '20').trigger('change');
                $('#mdlIstisna').val(row ? (row.IstisnaKod||'') : '');
                $('#mdlGtip').val(row ? (row.GtipNo||'') : '');
                $('#mdlPara').val(row ? (row.ParaBirimiKodu||'') : 'TRY');
                $('#mdlBirimFiyat').val(row ? (row.BirimFiyat||'') : '');

                currentTaxes = row && Array.isArray(row.MalzemeVergiler) ? deepClone(row.MalzemeVergiler) : [];
                renderTaxes();

                $('#malzemeModal').modal('show');
            }

            function renderTaxes(){
                var $tb = $('#manuel_gridVergi tbody');
                $tb.empty();

                if(!currentTaxes.length){
                    $tb.append('<tr><td colspan="5" class="text-center text-muted">Vergi satırı eklenmedi.</td></tr>');
                    return;
                }

                currentTaxes.forEach(function(tax, idx){
                    var $tr = $('<tr/>');

                    // Vergi
                    var $selVergi = $('<select class="form-control input-sm tax-vergi">')
                        .attr('data-idx', idx).append($('<option>',{value:'',text:'Seçiniz'}));
                    (window.vergiList||[]).forEach(function(v){
                        $selVergi.append($('<option>', { value:v.VergiKodu, text: (v.VergiKisaAdi+' ('+v.VergiKodu+')') }));
                    });
                    $selVergi.val(tax.VergiKodu||'');

                    // Oran
                    var $oran  = $('<input type="number" step="0.01" class="form-control input-sm input-xxs tax-oran">')
                        .attr('data-idx', idx).val(tax.Oran||'');

                    // Tutar
                    var $tutar = $('<input type="number" step="0.01" class="form-control input-sm input-xxs tax-tutar">')
                        .attr('data-idx', idx).val(tax.Tutar||'');

                    // Tevkifat
                    var $selTv = $('<select class="form-control input-sm tax-tevkifat">')
                        .attr('data-idx', idx).append($('<option>',{value:'',text:'Seçiniz'}));
                    (window.tevkifatList||[]).forEach(function(tv){
                        $selTv.append($('<option>', { value:tv.Kodu, text:(tv.Kodu+' - '+tv.Adi) }));
                    });
                    $selTv.val(tax.TevkifatKodu||'');

                    // Sil
                    var $del = $('<button type="button" class="btn btn-danger btn-xs"><i class="fa fa-trash"></i></button>')
                        .attr('data-idx', idx)
                        .on('click', function(){
                            var i = parseInt($(this).attr('data-idx'),10);
                            currentTaxes.splice(i,1);
                            renderTaxes();
                        });

                    $tr.append($('<td/>').append($selVergi));
                    $tr.append($('<td/>').append($oran));
                    $tr.append($('<td/>').append($tutar));
                    $tr.append($('<td/>').append($selTv));
                    $tr.append($('<td class="text-center"/>').append($del));
                    $tb.append($tr);
                });

                // Değer bağlama
                $('#manuel_gridVergi').off('change.tax');
                $('#manuel_gridVergi').on('change.tax', '.tax-vergi,.tax-oran,.tax-tutar,.tax-tevkifat', function(){
                    var idx = parseInt($(this).attr('data-idx'),10);
                    if(isNaN(idx) || !currentTaxes[idx]) return;

                    if($(this).hasClass('tax-vergi'))    currentTaxes[idx].VergiKodu   = $(this).val();
                    if($(this).hasClass('tax-oran'))     currentTaxes[idx].Oran        = toNumberOrNull($(this).val());
                    if($(this).hasClass('tax-tutar'))    currentTaxes[idx].Tutar       = toNumberOrNull($(this).val());
                    if($(this).hasClass('tax-tevkifat')) currentTaxes[idx].TevkifatKodu= $(this).val();
                });
            }

            function saveFromModal(){
                var form = $('#UrunKayit')[0];
                if(!form.checkValidity()){
                    form.reportValidity && form.reportValidity();
                    return;
                }

                var model = {
                    Id: parseInt($('#mdlId').val(),10) || 0,
                    SaticiUrunKodu: $('#mdlSaticiKod').val().trim(),
                    AliciUrunKodu:  $('#mdlAliciKod').val().trim(),
                    Aciklama:       $('#mdlAd').val().trim(),
                    BirimKodu:      $('#mdlBirim').val(),
                    KDVOrani:       parseInt($('#mdlKdv').val(),10),
                    IstisnaKod:     $('#mdlKdv').val()==='0' ? $('#mdlIstisna').val() : null,
                    GtipNo:         $('#mdlGtip').val().trim(),
                    ParaBirimiKodu: $('#mdlPara').val(),
                    BirimFiyat:     toNumberOrNull($('#mdlBirimFiyat').val()),
                    MalzemeVergiler: deepClone(currentTaxes)
                };

                var gridRow = {
                    Id: model.Id || nextId++,
                    Kod: model.SaticiUrunKodu,
                    Ad:  model.Aciklama,
                    GtipNo: model.GtipNo,
                    KDVOrani: model.KDVOrani,
                    BirimFiyat: model.BirimFiyat,
                    // düzenlemede ihtiyaç
                    SaticiUrunKodu: model.SaticiUrunKodu,
                    AliciUrunKodu:  model.AliciUrunKodu,
                    BirimKodu:      model.BirimKodu,
                    IstisnaKod:     model.IstisnaKod,
                    ParaBirimiKodu: model.ParaBirimiKodu,
                    MalzemeVergiler:model.MalzemeVergiler
                };

                if(model.Id){
                    var ix = rows.findIndex(function(r){ return r.Id===model.Id; });
                    if(ix>-1) rows[ix] = gridRow;
                } else {
                    rows.push(gridRow);
                }

                refreshTable();
                $('#malzemeModal').modal('hide');

                // Gerçek kaydetme için burada AJAX POST kullanabilirsiniz.
                // $.ajax({ url:'/api/stok/save', method:'POST', contentType:'application/json', data: JSON.stringify(model) })
            }

            function deepClone(o){ return JSON.parse(JSON.stringify(o||{})); }
            function toNumberOrNull(v){ var n = parseFloat(v); return isNaN(n) ? null : n; }
        })();
    </script>
}

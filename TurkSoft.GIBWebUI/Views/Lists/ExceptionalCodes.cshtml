@{
    ViewData["Title"] = "İstisna Kodları";
    ViewData["Subtitle"] = "Listeler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>Listeler <small>İstisna Kodları</small></h1>
</section>

<section class="content">
    <div class="box box-primary">
        <div class="box-header with-border">
            <button id="btnNewExceptional" class="btn btn-success btn-sm pull-right">
                <i class="fa fa-plus"></i> Yeni İstisna Ekle
            </button>
        </div>
        <div class="box-body">
            <table id="grid_exceptional" class="table table-bordered table-hover dataTable">
                <thead>
                    <tr>
                        <th>İstisna Kodu</th>
                        <th>İstisna Adı</th>
                        <th>Tür</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
</section>

<!-- İstisna Modal -->
<div class="modal fade" id="mdlExceptional" tabindex="-1" role="dialog" aria-labelledby="mdlExceptionalLabel">
    <div class="modal-dialog modal-md" role="document">
        <div class="modal-content">
            <form id="frmExceptional">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Kapat"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="mdlExceptionalLabel">İstisna Kod Bilgisi</h4>
                </div>

                <div class="modal-body">
                    <input type="hidden" id="excId" />

                    <div class="form-group">
                        <label for="excCode">İstisna Kodu</label>
                        <input type="text" class="form-control" id="excCode" required />
                    </div>

                    <div class="form-group">
                        <label for="excTitle">İstisna Adı</label>
                        <input type="text" class="form-control" id="excTitle" required />
                    </div>

                    <div class="form-group">
                        <label for="excSolution">Açıklama / Çözüm 1</label>
                        <textarea class="form-control" id="excSolution" rows="2"></textarea>
                    </div>

                    <div class="form-group">
                        <label for="excSolution2">Açıklama / Çözüm 2</label>
                        <textarea class="form-control" id="excSolution2" rows="2"></textarea>
                    </div>

                    <div class="form-group">
                        <label for="excType">Tür</label>
                        <select class="form-control" id="excType">
                            <option value="">Seçiniz</option>
                            <option value="KDV">KDV</option>
                            <option value="Muafiyet">Muafiyet</option>
                            <option value="İstisna">İstisna</option>
                            <option value="Tevkifat">Tevkifat</option>
                        </select>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Kaydet</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Kapat</button>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <script type="module" src="~/apps/exceptionalcodes.js"></script>
}

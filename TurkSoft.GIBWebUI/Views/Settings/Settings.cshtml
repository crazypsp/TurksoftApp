@{
    ViewData["Title"] = "Ayarlar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content">
    <div class="panel panel-sky">
        <div class="panel-body">

            <!-- 🔧 Firma Bilgileri -->
            <div class="box box-default">
                <div class="box-header with-border">
                    <h3 class="box-title">Firma Bilgileri</h3>
                </div>
                <div class="box-body">
                    <form class="form-horizontal">
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Firma Adı</label>
                            <div class="col-sm-6"><input type="text" class="form-control" id="CompanyName"></div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">VKN/TCKN</label>
                            <div class="col-sm-6"><input type="text" class="form-control" id="VknTckn"></div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Adres</label>
                            <div class="col-sm-6"><textarea class="form-control" id="Address"></textarea></div>
                        </div>
                    </form>
                </div>
            </div>

            <!-- 👤 Kullanıcı Ayarları -->
            <div class="box box-default">
                <div class="box-header with-border">
                    <h3 class="box-title">Kullanıcı Ayarları</h3>
                </div>
                <div class="box-body">
                    <form class="form-horizontal">
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Ad Soyad</label>
                            <div class="col-sm-6"><input type="text" class="form-control" id="FullName"></div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Email</label>
                            <div class="col-sm-6"><input type="email" class="form-control" id="Email"></div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Telefon</label>
                            <div class="col-sm-6"><input type="tel" class="form-control" id="Phone"></div>
                        </div>
                    </form>
                </div>
            </div>

            <!-- ⚙️ Genel Ayarlar -->
            <div class="box box-default">
                <div class="box-header with-border">
                    <h3 class="box-title">Genel Ayarlar</h3>
                </div>
                <div class="box-body">
                    <form class="form-horizontal">
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Tema</label>
                            <div class="col-sm-6">
                                <select class="form-control" id="Theme">
                                    <option value="red">Kırmızı</option>
                                    <option value="blue">Mavi</option>
                                    <option value="green">Yeşil</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Dil</label>
                            <div class="col-sm-6">
                                <select class="form-control" id="Language">
                                    <option value="tr">Türkçe</option>
                                    <option value="en">İngilizce</option>
                                </select>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <!-- 📑 Belge Durumu -->
            <div class="box box-default">
                <div class="box-header with-border">
                    <h3 class="box-title">Belge Durumu</h3>
                </div>
                <div class="box-body">
                    <table class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Belge</th>
                                <th>Durum</th>
                                <th>Tarih</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr><td>e-Fatura</td><td>Aktif</td><td>02.10.2025</td></tr>
                            <tr><td>e-Arşiv</td><td>Aktif</td><td>01.10.2025</td></tr>
                            <tr><td>e-Defter</td><td>Pasif</td><td>30.09.2025</td></tr>
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
</section>

@section Scripts {
    <script src="/hizlicss/jsv643136158/Settings/settings.js"></script>
}

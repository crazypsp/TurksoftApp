@{
    ViewData["Title"] = "Taslak İrsaliyeler";
    ViewData["Subtitle"] = "e-İrsaliye";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>e-İrsaliye <small>Taslak İrsaliyeler</small></h1>
    <ol class="breadcrumb">
        <li><a asp-controller="Home" asp-action="Index"><i class="fa fa-home"></i></a> e-İrsaliye</li>
        <li class="active">Taslak İrsaliyeler</li>
    </ol>
</section>

<section class="content">
    <div class="box box-default">
        <div class="box-header with-border">
            <h3 class="box-title">Taslak İrsaliye Arama Seçenekleri</h3>
        </div>

        <div class="box-body" id="btnAramaYapEnter">
            <div class="row">
                <div class="col-md-4">
                    <div class="form-horizontal row">
                        <label class="control-label col-sm-6">İrsaliye Tarihi (Başlangıç)</label>
                        <div class="col-sm-6">
                            <input id="IssueDateStart" type="text" class="form-control datepicker" />
                        </div>
                    </div>
                    <div class="form-horizontal row">
                        <label class="control-label col-sm-6">İrsaliye Tarihi (Bitiş)</label>
                        <div class="col-sm-6">
                            <input id="IssueDateEnd" type="text" class="form-control datepicker" />
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-horizontal row">
                        <label class="control-label col-sm-6">İşlem Tarihi (Başlangıç)</label>
                        <div class="col-sm-6">
                            <input id="CreatedDateStart" type="text" class="form-control datepicker" />
                        </div>
                    </div>
                    <div class="form-horizontal row">
                        <label class="control-label col-sm-6">İşlem Tarihi (Bitiş)</label>
                        <div class="col-sm-6">
                            <input id="CreatedDateEnd" type="text" class="form-control datepicker" />
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-horizontal row">
                        <label class="control-label col-sm-6">Alıcı Unvan</label>
                        <div class="col-sm-6">
                            <input id="TargetTitle" type="text" class="form-control" />
                        </div>
                    </div>
                    <div class="form-horizontal row">
                        <label class="control-label col-sm-6">Alıcı VKN/TCKN</label>
                        <div class="col-sm-6">
                            <input id="TargetIdentifier" type="text" maxlength="11" class="form-control" />
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="box-footer">
            <div class="input-group input-group-md pull-left">
                <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                    Toplu İşlem Seçiniz <span class="fa fa-caret-down"></span>
                </button>
                <ul class="dropdown-menu">
                    <li><a href="#" onclick="createNewDraft()"><i class="fa fa-plus-circle"></i> Yeni Oluştur</a></li>
                    <li><a href="#" onclick="sendAllDraft()"><i class="fa fa-send"></i> Seçilileri Gönder</a></li>
                    <li><a href="#" onclick="deleteAllDraft()"><i class="fa fa-remove"></i> Seçilileri Sil</a></li>
                    <li><a href="#" onclick="excelDraftModalOpen()"><i class="fa fa-file-excel-o"></i> Excel’den Taslağa Kaydet</a></li>
                </ul>
            </div>

            <div class="input-group input-group-md pull-left">
                <select id="subeler" class="form-control select2" multiple data-placeholder="Şube Seçiniz" style="width: 100%;">
                    <option value="1">HIZLI BİLİŞİM TEST MERKEZ</option>
                    <option value="465">HBT MERSİN</option>
                    <option value="466">antalyasube</option>
                    <option value="467">EntegreTürk</option>
                </select>
            </div>

            <div class="input-group input-group-md pull-right" style="padding: 3px 6px;">
                <button id="btnSearch" type="button" class="btn btn-success" onclick="gridSearch()">Arama Yap <i class="glyphicon glyphicon-search"></i></button>
            </div>
            <div class="input-group input-group-md pull-right" style="padding: 3px 6px;">
                <button id="btnClear" type="button" class="btn btn-danger" onclick="clearSearchInputs()">Temizle <i class="glyphicon glyphicon-remove-circle"></i></button>
            </div>
        </div>
    </div>

    <div class="box box-primary">
        <div class="box-body table-responsive">
            <table id="grid_despatchDraft" class="table table-bordered table-hover dataTable dt-head-center">
                <thead>
                    <tr>
                        <th><input type="checkbox" /></th>
                        <th>İrsaliye No</th>
                        <th>Firma Adı</th>
                        <th>Vergi Kimlik No</th>
                        <th>İrsaliye Tip/Senaryo</th>
                        <th>İrsaliye Tarihi</th>
                        <th>Ödenecek Tutar</th>
                        <th>Durum</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td><input type="checkbox" class="dt-checkboxes" /></td>
                        <td></td>
                        <td>AYTEKİN dwa</td>
                        <td>17404139908</td>
                        <td>SEVK<br />TEMELIRSALIYE</td>
                        <td>12.09.2025 00:00:00</td>
                        <td>5000</td>
                        <td><span class="label label-success">TASLAK</span></td>
                        <td>
                            <button type="button" class="btn btn-info btn-sm" title="Önizleme"><i class="glyphicon glyphicon-zoom-in"></i></button>
                            <button type="button" class="btn btn-warning btn-sm" title="Taslak Düzenle"><i class="fa fa-edit"></i></button>
                            <button type="button" class="btn btn-danger btn-sm" title="Taslak Sil"><i class="fa fa-remove"></i></button>
                            <button type="button" class="btn btn-success btn-sm" title="Taslak GİB’e Gönder"><i class="fa fa-send"></i></button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        $(function () {
            $('#grid_despatchDraft').DataTable({
                "language": { "url": "//cdn.datatables.net/plug-ins/1.10.21/i18n/Turkish.json" },
                "pageLength": 25
            });

            $('.select2').select2();
            $('.datepicker').datepicker({
                format: 'dd.mm.yyyy',
                language: 'tr',
                autoclose: true
            });
        });

        function gridSearch() {
            Swal.fire('Bilgi', 'Arama işlemi başlatıldı.', 'info');
        }

        function clearSearchInputs() {
            $('input').val('');
            Swal.fire('Bilgi', 'Arama alanları temizlendi.', 'success');
        }
    </script>
}
